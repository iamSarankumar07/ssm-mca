<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
        * {
            font-family: "Poppins", sans-serif;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            margin-bottom: 5%;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-bottom: 0;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
            background-color: #fff;
        }

        th {
            background-color: #3d6ef5ff;
            color: #fff;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        button[type="button"] {
            background-color: #3d6ef5ff;
            color: #f2f2f2;
            font-weight: bold;
            padding: 8px 14px;
            border: none;
            font-size: 13px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="button"]:hover {
            background-color: #f2f2f2;
            color: #3d6ef5ff;
            font-weight: bold;
        }

        .logout-btn {
            padding: 7px 14px;
            color: #fff;
            border: 2.5px solid rgb(212, 29, 29);
            background: rgb(212, 29, 29);
            font-weight: bold;
            text-decoration: none;
            font-size: 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.4s, color 0.4s;
            position: absolute;
            top: 15px;
            right: 10%;
        }

        .logout-btn:hover {
            background: #fff;
            color: rgb(212, 29, 29);
        }

        a {
            text-decoration: none;
        }

        th, td {
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <a href="/ssm/mca/logout" class="logout-btn" onclick="return confirm('Are you sure want to log out ?')">Logout</a>

    <h1>Welcome! <span style="color: #3d6ef5ff;">{{user.name}}</span></h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Register</th>
                <th>Student Details</th>
                <th>Tuition Fees</th>
                <th>Exam Fees</th>
                <th>Due Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Student</td>
                <td><button type="button" onclick="register()">Register</button></td>
                <td><button type="button" onclick="studentList()">Details</button></td>
                <td><button type="button" onclick="feeList()">Details</button></td>
                <td><button type="button" onclick="examFeeList()">Details</button></td>
                <td><button type="button" onclick="updateDue()">Update</button></td>
            </tr>
        </tbody>
    </table>
    <hr>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Action</th>
                <th>Title</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Payment Alert</td>
                <td><button type="button" onclick="paymentAlert()">Alert</button></td>
                <td>Profile Update Request</td>
                <td><button type="button" onclick="updateReq()">Show</button></td>
            </tr>
            <tr>
                <td>Student Tuition Fee Change Req</td>
                <td><button type="button" onclick="updateReqTu()">Show</button></td>
                <td>Student Exam Fee Change Req</td>
                <td><button type="button" onclick="updateReqEx()">Show</button></td>
            </tr>
            <tr>
                <td>Announcement</td>
                <td><button type="button" onclick="announcement()">Send</button></td>
                <td>Common Announcement</td>
                <td><button type="button" onclick="commonAnnouncement()">Send</button></td>
            </tr>
            <tr>
                <td>Send Address Update Req</td>
                <td><button type="button" onclick="addressUpdateReq()">Send</button></td>
                <td>Received Contact Messages</td>
                <td><button type="button" onclick="messages()">Messages</button></td>
            </tr>
            <tr>
                <td>Upload Study Materials</td>
                <td><button type="button" onclick="subject()">Upload</button></td>
                <td>Study Materials List</td>
                <td><button type="button" onclick="subjectList()">Details</button></td>
            </tr>
            <tr>
                <td>Move Students</td>
                <td><button type="button" onclick="moveStudents()">Move</button></td>
                <td>Alumni List</td>
                <td><button type="button" onclick="alumniList()">Details</button></td>
            </tr>
            <tr>
                <td>Staff Register</td>
                <td><button type="button" onclick="staffReg()">Create</button></td>
                <td>Staff List</td>
                <td><button type="button" onclick="staffList()">Details</button></td>
            </tr>
            <tr>
                <td>Image Upload</td>
                <td><button type="button" onclick="imageIpload()">Upload</button></td>
                <td>Image Gallery</td>
                <td><button type="button" onclick="imageGallery()">View Gallery</button></td>
            </tr>
        </tbody>
    </table>

    <script>
        function register() {
            window.location.href = '/ssm/mca/register';
        };
        function paymentAlert() {
            window.location.href = '/ssm/mca/paymentAlert';
        };
        function studentList() {
            window.location.href = '/ssm/mca/studentList';
        };
        function feeList() {
            window.location.href = '/ssm/mca/feeList';
        };
        function examFeeList() {
            window.location.href = '/ssm/mca/examFeeList';
        };
        function moveStudents() {
            window.location.href = '/ssm/mca/moveStudentsPage';
        };
        function alumniList() {
            window.location.href = '/ssm/mca/alumniList';
        };
        function updateDue() {
            window.location.href = '/ssm/mca/updateDueDatesForAll';
        };
        function messages() {
            window.location.href = '/ssm/mca/messages';
        };
        function announcement() {
            window.location.href = '/ssm/mca/announcement';
        };
        function commonAnnouncement() {
            window.location.href = '/ssm/mca/commonAnnouncement';
        };
        function addressUpdateReq() {
            window.location.href = '/ssm/mca/addressUpdateReq';
        };
        function updateReq() {
            window.location.href = '/ssm/mca/reviewRequest';
        };
        function updateReqTu() {
            window.location.href = '/ssm/mca/reviewRequestTu';
        };
        function updateReqEx() {
            window.location.href = '/ssm/mca/reviewRequestEx';
        };
        function subject() {
            window.location.href = '/ssm/mca/subject';
        };
        function subjectList() {
            window.location.href = '/ssm/mca/subjectList';
        };
        function staffReg() {
            window.location.href = '/ssm/mca/signup';
        };
        function staffList() {
            window.location.href = '/ssm/mca/staffList';
        };
        function imageIpload() {
            window.location.href = '/ssm/mca/imageUpload';
        };
        function imageGallery() {
            window.location.href = '/ssm/mca/gallery';
        };
    </script>
</body>
</html>
