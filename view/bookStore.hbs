            if (searchTerm === '') {
                document.querySelectorAll('#booksList > div').forEach(book => {
                    book.style.display = 'block';
                });
                return;
            }
            
            document.querySelectorAll('#booksList > div').forEach(book => {
                const title = book.querySelector('.card-title').textContent.toLowerCase();
