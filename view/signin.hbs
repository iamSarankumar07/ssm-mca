<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="icon" href="https://i.postimg.cc/x1RfJjWH/user-1.png">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");

        * {
            font-family: "Poppins", sans-serif;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            gap: 20px;
            padding: 30px;
            border-radius: 10px;
        }

        .form-wrapper {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 300px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        h1 {
            text-align: center;
            color: #3d6ef5ff;
        }

        a {
            text-align: center;
            font-weight: bold;
            text-decoration: none;
            color: #472ddb;
        }

        a:hover {
            color: #1459da;
        }

        p {
            text-align: center;
            margin-top: 10px;
            color: #333;
        }

        .btn {
            padding: 8px 15px;
            color: #f2f2f2;
            width: 100%;
            border: 2px solid #3d6ef5ff;
            background: #3d6ef5ff;
            font-weight: bold;
            font-size: 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: .4s;
        }

        .btn:hover {
            background: #f2f2f2;
            color: #3d6ef5ff;
        }

        .showPassCode {
            display: flex;
            align-items: center;
            margin: 5px 0px;
        }

        #showAdminPassword, #showStudentPassword {
            width: min-content;
        }

        .box {
            margin-right: 10px;
        }

        .txt {
            margin-bottom: 12px;
            font-size: 14px;
            color: #1459da;
        }

        .signup-link, .forgot-link {
            margin-top: 10px;
            font-size: 0.9rem;
            text-align: center;
        }

        .home {
            text-align: center;
            margin-top: 20px;
        }

        .switch-login {
            text-align: center;
            font-weight: bold;
            margin-top: 20px;
            font-size: 1rem;
            cursor: pointer;
            color: #472ddb;
        }

        .switch-login:hover {
            color: #1459da;
        }

        /* Media Queries */
        @media (max-width: 1200px) {
            .container {
                padding: 20px;
            }

            .form-wrapper {
                width: 90%;
            }
        }

        @media (max-width: 992px) {
            .container {
                flex-direction: column;
                align-items: center;
            }
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                align-items: center;
                padding: 15px;
            }

            .form-wrapper {
                width: 100%;
                max-width: 100%;
                margin-bottom: 20px;
            }
        }

        @media (max-width: 576px) {
            body {
                font-size: 14px;
            }

            .container {
                padding: 10px;
            }

            .form-wrapper {
                padding: 15px;
                width: 100%;
            }

            .btn {
                font-size: 14px;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-wrapper" id="staffLoginForm">
            <h1>Staff Login</h1>
            <form action="/ssm/mca/login" method="post">
                <label for="email">Email or Staff ID:</label>
                <input type="text" id="email" name="email" autocomplete="off" required>

                <label for="password">Password:</label>
                <input type="password" id="adminPassword" name="password" aria-label="Password" required>

                <div class="showPassCode">
                    <input class="box" type="checkbox" id="showAdminPassword" name="showAdminPassword">
                    <label class="txt" for="showAdminPassword"> Show Password</label>
                </div>

                <button type="submit" class="btn">Login</button>

                <div class="forgot-link">
                    Forgot your password? <a href="/ssm/mca/forgotPassword">Reset it</a>
                </div>

                <div class="switch-login" id="switchToStudent">Login as a Student</div>

                <div class="home">
                    <a href="/">Home</a>
                </div>
            </form>
        </div>

        <div class="form-wrapper" id="studentLoginForm" style="display: none;">
            <h1>Student Login</h1>
            <form action="/ssm/mca/studentLogin" method="post">
                <label for="userName">Student ID:</label>
                <input type="text" id="userName" name="studentId" autocomplete="off" required>

                <label for="password">Date of Birth:</label>
                <input type="password" id="studentPassword" name="password" required placeholder="DD-MM-YYYY">

                <div class="showPassCode">
                    <input class="box" type="checkbox" id="showStudentPassword" name="showStudentPassword">
                    <label class="txt" for="showStudentPassword"> Show Password</label>
                </div>

                <button type="submit" class="btn">Login</button>
                <div class="forgot-link">
                    Forgot your password? <a href="/ssm/mca/student/forgotPassword">Reset it</a>
                </div>
                
                <div class="switch-login" id="switchToStaff">Login as Staff</div>

                <div class="home">
                    <a href="/">Home</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        const staffLoginForm = document.getElementById('staffLoginForm');
        const studentLoginForm = document.getElementById('studentLoginForm');
        const switchToStudent = document.getElementById('switchToStudent');
        const switchToStaff = document.getElementById('switchToStaff');

        switchToStudent.addEventListener('click', () => {
            staffLoginForm.style.display = 'none';
            studentLoginForm.style.display = 'block';
        });

        switchToStaff.addEventListener('click', () => {
            studentLoginForm.style.display = 'none';
            staffLoginForm.style.display = 'block';
        });

        const showPasswordCheckboxAdmin = document.getElementById('showAdminPassword');
        const passwordFieldAdmin = document.getElementById('adminPassword');
        
        showPasswordCheckboxAdmin.addEventListener('change', function() {
            passwordFieldAdmin.type = this.checked ? 'text' : 'password';
        });

        const showPasswordCheckboxStudent = document.getElementById('showStudentPassword');
        const passwordFieldStudent = document.getElementById('studentPassword');

        showPasswordCheckboxStudent.addEventListener('change', function() {
            passwordFieldStudent.type = this.checked ? 'text' : 'password';
        });
    </script>
</body>
</html>
