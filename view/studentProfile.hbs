        function updateAchievement(id) {
            const form = document.getElementById('achievementForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const saveBtn = document.getElementById('saveAchievementBtn');
            saveBtn.disabled = true;
            saveBtn.classList.add('btn-loading');
            
            const formData = new FormData(form);
            
            const achievementData = {
                title: formData.get('title'),
                year: formData.get('year'),
                description: formData.get('description'),
                achievementId: id,
                isEdit: true,
                userId: studentId
            };
            
            fetch(`/v1/api/student/save/achievement`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(achievementData)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to update achievement');
                }
                return response.json();
            })
            .then(data => {
                showToast('Achievement updated successfully!', 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Failed to update achievement. Please try again.', 'error');
            })
            .finally(() => {
                saveBtn.disabled = false;
                saveBtn.classList.remove('btn-loading');
            });
        }
        
        function deleteAchievement(id) {
            openDeleteConfirmModal('achievement', id);
        }
        
        let itemToDeleteId = null;
        let itemTypeToDelete = null;

        function openDeleteConfirmModal(type, id) {
            itemToDeleteId = id;
            itemTypeToDelete = type;
            
            const modalTitle = document.querySelector('#deleteConfirmModal .custom-modal-header h2');
            modalTitle.textContent = `Delete ${type.charAt(0).toUpperCase() + type.slice(1)}`;
            
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            confirmBtn.onclick = executeDelete;
            
            document.getElementById('deleteConfirmModal').classList.add('active');
        }

        function closeDeleteConfirmModal() {
            document.getElementById('deleteConfirmModal').classList.remove('active');
            itemToDeleteId = null;
            itemTypeToDelete = null;
        }

        function executeDelete() {
            if (!itemToDeleteId || !itemTypeToDelete) return;
            
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            confirmBtn.disabled = true;
            confirmBtn.classList.add('btn-loading');
            
            let endpoint = '/v1/api/student/save/achievement';
            let payload = {
                isDelete: true,
                achievementId: itemToDeleteId,
                userId: studentId
            };
            
            fetch(endpoint, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Failed to delete ${itemTypeToDelete}`);
                }
                return response.json();
            })
            .then(data => {
                showToast(`${itemTypeToDelete.charAt(0).toUpperCase() + itemTypeToDelete.slice(1)} deleted successfully!`, 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            })
            .catch(error => {
                console.error('Error:', error);
                showToast(`Failed to delete ${itemTypeToDelete}. Please try again.`, 'error');
            })
            .finally(() => {
                confirmBtn.disabled = false;
                confirmBtn.classList.remove('btn-loading');
                closeDeleteConfirmModal();
            });
        }
        
