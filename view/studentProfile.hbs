    <div class="fee-requests-modal" id="feeRequestsModal">
        <div class="fee-requests-content">
            <div class="fee-requests-header">
                <h2 id="feeRequestsModalTitle">Fee Update Requests</h2>
                <button class="payment-popup-close" id="closeFeeRequestsModal" aria-label="Close">&times;</button>
            </div>
            <div class="fee-requests-body" id="feeRequestsBody">
                <div id="feeRequestsLoadingSpinner" class="loading-spinner">
                    <div class="spinner"></div>
                </div>
                
                <div id="feeRequestsEmptyState" class="empty-state" style="display: none;">
                    <div class="empty-state-icon">
                        <i class="fas fa-file-invoice-dollar"></i>
                    </div>
                    <div class="empty-state-text">
                        No fee update requests found.
                    </div>
                </div>
                
                <div id="feeRequestsList" style="display: none;">
                </div>
            </div>
            <div class="fee-requests-footer">
                <button type="button" class="btn btn-secondary" id="closeFeeRequestsBtn">Close</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function handleLogout() {
            if (confirm('Are you sure you want to log out?')) {
                window.location.href = '/v1/api/slogout';
            }
        }

        function addressUpdate() {
            window.location.href = '/v1/api/studentAddressUpdate/{{student._id}}';
        }

        function hideUpdateButton() {
            var updateButtonRow = document.getElementById("hideButton");
            var hideTd = document.getElementById("hideTd");
            if ({{ student.addressUpdate }}) {
                updateButtonRow.style.display = "none";
            } else {
                hideTd.style.display = "none";
            }
        }

        window.onload = function() {
            hideUpdateButton();

            const avatarImg = document.getElementById('avatar-img');
            const studentGender = "{{ student.gender }}";
            const studentImg = "{{ student.imageUrl }}";

            if (studentImg) {
                avatarImg.src = studentImg;
            } else if (studentGender === 'Male') {
                avatarImg.src = 'https://i.ibb.co/6JxYzd3/man.png';
            } else if (studentGender === 'Female') {
                avatarImg.src = 'https://i.ibb.co/Bfrp572/woman.png';
            } else {
                avatarImg.src = '';
            }

            fetch('/v1/api/getStudentAttendanceStatus')
                .then(response => response.json())
                .then(data => {
                    if (data.attendanceMarked) {
                        document.getElementById('studentAttendanceBtn').innerText = "Marked";
                        document.getElementById('studentAttendanceBtn').disabled = true;
                    }
                });
        };

        function openPaymentPopup(type) {
            const popup = document.getElementById('paymentPopup');
            popup.setAttribute('data-type', type); 
            popup.classList.add('active');
        }

        document.getElementById('closePopup').addEventListener('click', function() {
            document.getElementById('paymentPopup').classList.remove('active');
        });

        function selectPaymentGateway(gateway) {
            const popup = document.getElementById('paymentPopup');
            const type = popup.getAttribute('data-type');
            const studentId = '{{student.studentId}}';

            let url = '';

            if (type === 'tuition') {
                if (gateway === 'stripe') url = `/v1/api/tuitionCreatePayment?studentId=${studentId}`;
                if (gateway === 'stripe-ejs') url = `/v1/api/stripeTuitionPaymentEJS?studentId=${studentId}`;
                if (gateway === 'razor') url = `/v1/api/tuitionCreatePaymentRazor?studentId=${studentId}`;
                if (gateway === 'paypal') url = `/v1/api/tuitionCreatePaymentPaypal?studentId=${studentId}`;
                if (gateway === 'cashfree') url = `/v1/api/tuitionCreatePaymentCashfree?studentId=${studentId}`;
            } else if (type === 'exam') {
                if (gateway === 'stripe') url = `/v1/api/examCreatePayment?studentId=${studentId}`;
                if (gateway === 'stripe-ejs') url = `/v1/api/stripeExamPaymentEJS?studentId=${studentId}`;
                if (gateway === 'razor') url = `/v1/api/examCreatePaymentRazor?studentId=${studentId}`;
                if (gateway === 'paypal') url = `/v1/api/examCreatePaymentPaypal?studentId=${studentId}`;
                if (gateway === 'cashfree') url = `/v1/api/examCreatePaymentCashfree?studentId=${studentId}`;
            }

            window.location.href = url;
        }

        function submitStudentAttendance() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(attendanceSuccess, attendanceError, {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                });
            } else {
                showAttendancePopup("Geolocation is not supported by your browser.", false);
            }
        }

        function attendanceSuccess(position) {
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;

            fetch('/v1/api/studentSelfAttendance', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ latitude, longitude })
            })
            .then(response => response.json())
            .then(data => {
                showAttendancePopup(data.message, data.success);

                if (data.success) {
                    document.getElementById('studentAttendanceBtn').innerText = "Marked";
                    document.getElementById('studentAttendanceBtn').disabled = true;
                }
            });
        }

        function attendanceError() {
            showAttendancePopup("Unable to retrieve location.", false);
        }

        function showAttendancePopup(message, success) {
            const popup = document.getElementById('attendancePopup');
            const popupText = document.getElementById('attendancePopupText');
            
            popupText.innerText = message;
            popup.style.backgroundColor = success ? "#10b981" : "#ef4444";
            popup.style.display = "block";

            setTimeout(() => {
                popup.style.display = "none";
            }, 5000);
        }

        function openFeeRequestsModal(feeType) {
            const modal = document.getElementById('feeRequestsModal');
            const modalTitle = document.getElementById('feeRequestsModalTitle');
            
            modalTitle.textContent = `${feeType} Fee Update Requests`;
            modal.setAttribute('data-fee-type', feeType);
            
            document.getElementById('feeRequestsLoadingSpinner').style.display = 'flex';
            document.getElementById('feeRequestsEmptyState').style.display = 'none';
            document.getElementById('feeRequestsList').style.display = 'none';
            
            fetchFeeUpdateRequests(feeType);
            
            modal.classList.add('active');
        }

        function fetchFeeUpdateRequests(feeType) {
            const studentId = '{{student._id}}';
            
            fetch(`/v1/api/getStudentFeeUpdateReq?studentId=${studentId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('feeRequestsLoadingSpinner').style.display = 'none';
                    
                    if (data.success && data.data && data.data.length > 0) {
                        const filteredRequests = data.data.filter(request => 
                            request.feeType === feeType && 
                            request.studentId._id === studentId
                        );
                        
                        if (filteredRequests.length > 0) {
                            renderFeeRequests(filteredRequests);
                            document.getElementById('feeRequestsList').style.display = 'block';
                        } else {
                            document.getElementById('feeRequestsEmptyState').style.display = 'flex';
                        }
                    } else {
                        document.getElementById('feeRequestsEmptyState').style.display = 'flex';
                    }
                })
                .catch(error => {
                    console.error('Error fetching fee update requests:', error);
                    document.getElementById('feeRequestsLoadingSpinner').style.display = 'none';
                    document.getElementById('feeRequestsEmptyState').style.display = 'flex';
                });
        }

        function renderFeeRequests(requests) {
            const requestsList = document.getElementById('feeRequestsList');
            requestsList.innerHTML = '';
            
            requests.forEach(request => {
                const requestDate = new Date(request.requestedOn);
                
                let statusClass = '';
                if (request.status === 'Approved') {
                    statusClass = 'badge-approved';
                } else if (request.status === 'Rejected') {
                    statusClass = 'badge-rejected';
                } else {
                    statusClass = 'badge-pending';
                }
                
                const requestItem = document.createElement('div');
                requestItem.className = 'fee-request-item';
                
                requestItem.innerHTML = `
                    <div class="fee-request-header">
                        <div class="fee-request-title">${request.requestId}</div>
                        <span class="fee-request-badge ${statusClass}">${request.status}</span>
                    </div>
                    <div class="fee-request-details">
                        <div class="fee-request-detail">
                            <span class="detail-label">Fee Type</span>
                            <span class="detail-value">${request.feeType}</span>
                        </div>
                        <div class="fee-request-detail">
                            <span class="detail-label">Amount Paid</span>
                            <span class="detail-value">₹ ${request.amountDetails ? request.amountDetails.currentPaidAmount : request.currentPaidAmount}</span>
                        </div>
                        <div class="fee-request-detail">
                            <span class="detail-label">Total Paid</span>
                            <span class="detail-value">₹ ${request.amountDetails ? request.amountDetails.paidAmount : request.paidAmount}</span>
                        </div>
                        <div class="fee-request-detail">
                            <span class="detail-label">Pending Amount</span>
                            <span class="detail-value">₹ ${request.amountDetails ? request.amountDetails.pendingAmount : request.pendingAmount}</span>
                        </div>
                        <div class="fee-request-detail">
                            <span class="detail-label">Requested On</span>
                            <span class="detail-value">${formatDate(requestDate)}</span>
                        </div>
                    </div>
                    <div class="fee-request-comments">
                        <strong>Comments:</strong> ${request.comments || 'No comments provided'}
                    </div>
                    ${request.adminComment ? `
                    <div class="fee-request-comments">
                        <strong>Admin Comment:</strong> ${request.adminComment}
                    </div>
                    ` : ''}
                    ${request.attachment ? `
                    <div class="mt-3">
                        <a href="${request.attachment}" class="btn btn-sm btn-outline-primary" target="_blank">
                            <i class="fas fa-paperclip me-1"></i> View Receipt
                        </a>
                    </div>
                    ` : ''}
                `;
                
                requestsList.appendChild(requestItem);
            });
        }

        function formatDate(date) {
            if (!date || isNaN(date.getTime())) return '-';
            
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            
            return `${day}/${month}/${year}`;
        }

        document.getElementById('closeFeeRequestsModal').addEventListener('click', function() {
            document.getElementById('feeRequestsModal').classList.remove('active');
        });

        document.getElementById('closeFeeRequestsBtn').addEventListener('click', function() {
            document.getElementById('feeRequestsModal').classList.remove('active');
        });
    </script>
