        function saveAchievement() {
            const form = document.getElementById('achievementForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }
            
            const saveBtn = document.getElementById('saveAchievementBtn');
            saveBtn.disabled = true;
            saveBtn.classList.add('btn-loading');
            
            const formData = new FormData(form);
            
            const achievementData = {
                title: formData.get('title'),
                year: formData.get('year'),
                description: formData.get('description'),
                userId: studentId,
            };
            
            fetch(`/v1/api/student/save/achievement`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(achievementData)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to save achievement');
                }
                return response.json();
            })
            .then(data => {
                showToast('Achievement added successfully!', 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Failed to save achievement. Please try again.', 'error');
            })
            .finally(() => {
                saveBtn.disabled = false;
                saveBtn.classList.remove('btn-loading');
            });
        }
        
        function editAchievement(id, title, year, description) {
            document.getElementById('achievementModal').classList.add('active');
            document.getElementById('achievementTitle').value = title;
            document.getElementById('achievementYear').value = year;
            document.getElementById('achievementDescription').value = description || '';
            
            const saveBtn = document.getElementById('saveAchievementBtn');
            saveBtn.textContent = 'Update';
            saveBtn.onclick = function() {
                updateAchievement(id);
            };
