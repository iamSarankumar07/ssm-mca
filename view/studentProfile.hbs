                avatarImg.src = studentImg;
            } else if (studentGender === 'Male') {
                avatarImg.src = 'https://i.ibb.co/6JxYzd3/man.png';
            } else if (studentGender === 'Female') {
                avatarImg.src = 'https://i.ibb.co/Bfrp572/woman.png';
