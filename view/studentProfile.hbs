<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
        :root {
            --primary-color: #3b82f6;
            --primary-hover: #2563eb;
            --danger-color: #ef4444;
            --danger-hover: #dc2626;
            --background-color: #f3f4f6;
            --card-background: #ffffff;
            --text-primary: #111827;
            --text-secondary: #4b5563;
            --border-color: #e5e7eb;
        }
    
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
    
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--background-color);
            color: var(--text-primary);
            line-height: 1.5;
        }
    
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
    
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
    
        h1 {
            font-size: 2rem;
            font-weight: 700;
        }
    
        .btn {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.2s;
        }
    
        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }
    
        .btn-primary:hover {
            background-color: var(--primary-hover);
        }
    
        .btn-danger {
            background-color: var(--danger-color);
            color: white;
        }
    
        .btn-danger:hover {
            background-color: var(--danger-hover);
        }
    
        .btn-icon {
            padding: 0.5rem;
        }
    
        .grid {
            display: grid;
            gap: 1.5rem;
        }
    
        @media (min-width: 768px) {
            .grid {
                grid-template-columns: 2fr 1fr;
            }
        }
    
        .card {
            background-color: var(--card-background);
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }
    
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
        }
    
        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
        }
    
        .card-content {
            padding: 1.5rem;
        }
    
        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }
    
        .avatar {
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            background-color: var(--text-secondary);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: 600;
            margin-right: 1rem;
        }
    
        .profile-name {
            font-size: 1.5rem;
            font-weight: 600;
        }
    
        .profile-role {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }
    
        .details-grid {
            display: grid;
            gap: 1rem;
        }
    
        @media (min-width: 640px) {
            .details-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    
        .detail-item dt {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-secondary);
        }
    
        .detail-item dd {
            font-size: 1rem;
            margin-top: 0.25rem;
        }
    
        .tabs {
            display: flex;
            border-bottom: 1px solid var(--border-color);
        }
    
        .tab {
            padding: 0.75rem 1rem;
            font-weight: 500;
            color: var(--text-secondary);
            cursor: pointer;
            transition: color 0.2s, border-color 0.2s;
        }
    
        .tab.active {
            color: var(--primary-color);
            border-bottom: 2px solid var(--primary-color);
        }
    
        .tab-content {
            display: none;
            padding: 1rem 0;
        }
        
        .other-services {
            padding: 1rem 0;
        }
    
        .tab-content.active {
            display: block;
        }
    
        .fee-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }
    
        .fee-label {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }
    
        .fee-value {
            font-weight: 500;
        }
    
        table {
            width: 100%;
            border-collapse: collapse;
        }
    
        th,
        td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }
    
        th {
            background-color: var(--background-color);
            font-weight: 600;
            color: var(--text-secondary);
            font-size: 0.75rem;
            text-transform: uppercase;
        }
    
        td {
            font-size: 0.875rem;
        }
    
        .table-link {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }
    
        .table-link:hover {
            text-decoration: underline;
        }
    
        .card h3 {
            margin-top: 0;
            display: flex;
            font-size: 20px;
            justify-content: space-between;
            align-items: center;
        }
    
        .card img {
            width: 35px;
            height: 35px;
            vertical-align: middle;
        }
    
        button[type="button"] {
            background-color: #3d6ef5ff;
            color: #f2f2f2;
            font-weight: bold;
            padding: 8px 14px;
            border: none;
            font-size: 13px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
    
        button[type="button"]:hover {
            background-color: #f2f2f2;
            color: #3d6ef5ff;
            font-weight: bold;
        }
    
        .pay-button {
            background-color: #3d6ef5;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }
    
        .pay-button:hover {
            background-color: #2c50c1;
        }
    
        .popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .popup.active {
            opacity: 1;
            visibility: visible;
        }

        .popup-content {
            background-color: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 80%;
        }

        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .popup-header h2 {
            margin: 0;
            font-size: 1.5rem;
        }

        .close-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-color);
            padding: 0;
        }

        .payment-options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .payment-option {
            background-color: var(--secondary-color);
            border: 1px solid var(--border-color);
            border-radius: 5px;
            padding: 1rem;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .payment-option:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .payment-option img {
            max-width: 100%;
            max-height: 40px;
        }

        {{!-- .payment-option img[src*="stripepay"] {
            max-height: 90%; 
            max-width: 90%;
        } --}}

        .card-content {
            padding: 1.5rem;
        }

        .other-services {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .fee-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .fee-value a i {
            font-size: 22px; 
            color: #007bff;
            transition: 0.3s;
        }

        .fee-value a i:hover {
            color: #0056b3; 
        }

        @media (max-width: 480px) {
            .payment-options {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header class="header">
            <h1>Student Profile</h1>
            <button class="btn btn-danger" onclick="handleLogout()">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                <span style="margin-left: 0.5rem;">Logout</span>
            </button>
        </header>

        <div class="grid">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Student Details</h2>
                    <a href="/ssm/mca/studentProfileEdit/{{student._id}}" class="edit-button">
                    <img src="https://i.postimg.cc/dtwWjbPs/edit-info.png" alt="Profile Edit">
                    </a>
                </div>
                <div class="card-content">
                    {{!-- <div class="profile-header">
                        <div class="avatar">hj</div>
                        <div>
                            <h3 class="profile-name">{{ student.name }}</h3>
                            <p class="profile-role">MCA - {{ student.year }} Year</p>
                        </div>
                    </div> --}}
                    <div class="profile-header">
                        <div class="avatar">
                            <img id="avatar-img" alt="Student Avatar" />
                        </div>
                        <div>
                            <h3 class="profile-name">{{ student.name }}</h3>
                            <p class="profile-role">MCA - {{ student.year }} Year</p>
                        </div>
                    </div>
                    <div class="details-grid">
                        <div class="detail-item">
                            <dt>Student ID</dt>
                            <dd>{{ student.studentId }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Register Number</dt>
                            <dd>{{ student.registerNumber }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Gender</dt>
                            <dd>{{ student.gender }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Date of Birth</dt>
                            <dd>{{ student.dob }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Phone</dt>
                            <dd>+91 {{ student.phone }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Email</dt>
                            <dd>{{ student.email }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Blood Group</dt>
                            <dd>{{ student.bloodGroup }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Gardian Name</dt>
                            <dd>{{ student.parentName }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Aadhaar Number</dt>
                            <dd>{{ student.aadhaarNum }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Address</dt>
                            <dd id="hideButton"><button type="button" onclick="addressUpdate()">Update Address</button></dd>
                            <dd id="hideTd">{{ student.address.address }}, {{ student.address.city }}, {{ student.address.state }}, {{ student.address.pinCode }}, {{ student.address.country }}.</dd>
                        </div>
                        {{!-- <div class="detail-item">
                            <dt>Chat Room</dt>
                            <a href="/ssm/mca/chatroom">Enter Chatroom</a>
                        </div>
                        <div class="detail-item">
                            <dt>Chatbot</dt>
                            <a href="/ssm/mca/student/getChatBot/{{student._id}}">Access Chatbot</a>
                        </div> --}}
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Fees Details & Attendance</h2>
                </div>
                <div class="card-content">
                    <div class="tabs">
                        <div class="tab active" onclick="switchTab('tuitionFeeTab')">Tuition</div>
                        <div class="tab" onclick="switchTab('examFeeTab')">Exam</div>
                        <div class="tab" onclick="switchTab('attendanceTab')">Attendance</div>
                    </div>
                    
                    <div id="tuitionFeeTab" class="tab-content active">
                        <h3>
                            Tuition Fees Details 
                            <a href="/ssm/mca/studentProfileTuEdit/{{student._id}}" class="edit-button">
                                <img src="https://i.postimg.cc/dtwWjbPs/edit-info.png" alt="Profile Edit">
                            </a>
                        </h3>
                        <br>
                        <div class="fee-item">
                            <span class="fee-label">Total Amount</span>
                            <span class="fee-value">Rs. {{student.totalFee}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Amount Due</span>
                            <span class="fee-value">Rs. {{student.pendingFee}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Payment Status</span>
                            <span class="fee-value" style="color: {{#if (eq student.paymentStatus "Paid")}}green{{else if (eq student.paymentStatus "Partial")}}orange{{else}}red{{/if}};">
                                {{student.paymentStatus}}
                            </span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Due Date</span>
                            <span class="fee-value">{{student.tutionDueDate}}</span>
                        </div>
                        {{#if student.tuEditRequest.status}}
                        <div class="fee-item">
                            <span class="fee-label">Fees update status</span>
                            <span class="fee-value">
                                {{#if (eq student.tuEditRequest.status "requested")}}
                                    Pending
                                {{else}}
                                    {{student.tuEditRequest.status}}
                                {{/if}}
                            </span>
                        </div>
                        {{/if}}
                        {{#if (eq student.paymentStatus "Paid") }}
                        {{else}}
                        <div class="fee-item" style="margin-top: 25px; display: flex; align-items: center;">
                            <span class="fee-label">Pay Tuition Fees -></span>
                            <span class="fee-value">
                            {{#if (eq student.paymentStatus "Paid")}}
                            {{else}}
                                <button class="pay-button" onclick="openPaymentPopup('tuition')">Pay</button>
                            {{/if}}
                            </span>
                        </div>
                        {{/if}}
                    </div>
                    
                    <div id="examFeeTab" class="tab-content">
                        <h3>
                            Exam Fees Details 
                            <a href="/ssm/mca/studentProfileExEdit/{{student._id}}" class="edit-button">
                                <img src="https://i.postimg.cc/dtwWjbPs/edit-info.png" alt="Profile Edit">
                            </a>
                        </h3>
                        <br>
                        <div class="fee-item">
                            <span class="fee-label">Total Amount</span>
                            <span class="fee-value">Rs. {{student.examTotalFee}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Amount Due</span>
                            <span class="fee-value">Rs. {{student.examPendingFee}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Payment Status</span>
                            <span class="fee-value" style="color: {{#if (eq student.examPaymentStatus "Paid")}}green{{else if (eq student.examPaymentStatus "Partial")}}orange{{else}}red{{/if}};">
                                {{student.examPaymentStatus}}
                            </span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Due Date</span>
                            <span class="fee-value">{{student.examDueDate}}</span>
                        </div>
                        {{#if student.exEditRequest.status}}
                        <div class="fee-item">
                            <span class="fee-label">Fees update status</span>
                            <span class="fee-value">
                                {{#if (eq student.exEditRequest.status "requested")}}
                                    Pending
                                {{else}}
                                    {{student.exEditRequest.status}}
                                {{/if}}
                            </span>
                        </div>
                        {{/if}}
                        {{#if (eq student.examPaymentStatus "Paid") }}
                        {{else}}
                        <div class="fee-item" style="margin-top: 25px; display: flex; align-items: center;">
                            <span class="fee-label">Pay Exam Fees -></span>
                            <span class="fee-value">
                            {{#if (eq student.examPaymentStatus "Paid")}}
                            {{else}}
                                <button class="pay-button" onclick="openPaymentPopup('exam')">Pay</button>
                            {{/if}}
                            </span>
                        </div>
                        {{/if}}
                    </div>

                    <div id="attendanceTab" class="tab-content">
                        <h3>
                            Attendance Details 
                        </h3>
                        <br>
                        <div class="fee-item">
                            <span class="fee-label">Total Prenset Days</span>
                            <span class="fee-value">{{attendanceSummary.present}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Absent Days</span>
                            <span class="fee-value">{{attendanceSummary.absent}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Excused Days</span>
                            <span class="fee-value">{{attendanceSummary.excused}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Late Days</span>
                            <span class="fee-value">{{attendanceSummary.late}}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Other Services</h2>
                </div>
                <div class="card-content other-services">
                    <div class="fee-item">
                        <span class="fee-label">MCA Chatroom</span>
                        <span class="fee-value">
                            <a href="/ssm/mca/chatroom" class="chat-link">
                                <i class="fa-solid fa-comments"></i>
                            </a>
                        </span>
                    </div>
                    <div class="fee-item">
                        <span class="fee-label">AI Chatbot</span>
                        <span class="fee-value">
                            <a href="/ssm/mca/student/getChatBot/{{student._id}}" class="chat-link">
                                <i class="fa-solid fa-robot"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="card" style="margin-top: 1.5rem;">
            <div class="card-header">
                <h2 class="card-title">Study Materials</h2>
            </div>
            <div class="card-content">
                <table>
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Subject Code</th>
                            <th>Subject Title</th>
                            <th>Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each subject}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{code}}</td>
                            <td>{{title}}</td>
                            <td><a href="{{link}}" class="table-link">Download</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="popup" id="paymentPopup">
        <div class="popup-content">
            <div class="popup-header">
                <h2>Select Payment Gateway</h2>
                <button class="close-btn" id="closePopup" aria-label="Close">&times;</button>
            </div>
            <div class="payment-options">
                <button class="payment-option" onclick="selectPaymentGateway('cashfree')">
                    <img src="https://i.postimg.cc/R04vrL1F/cashfree-payments-logo-freelogovectors-net.png" alt="Cashfree">
                </button>
                {{!-- <button class="payment-option" onclick="selectPaymentGateway('stripe')">
                    <img src="https://i.postimg.cc/HsX30cd7/Stripe.png" alt="Stripe">
                </button> --}}
                <button class="payment-option" onclick="selectPaymentGateway('stripe-ejs')">
                    <img src="https://i.postimg.cc/HsX30cd7/Stripe.png" alt="Stripe">
                </button>
                <button class="payment-option" onclick="selectPaymentGateway('razor')">
                    <img src="https://i.postimg.cc/XYg2VW0b/razorpay.png" alt="RazorPay">
                </button>
                <button class="payment-option" onclick="selectPaymentGateway('paypal')">
                    <img src="https://i.postimg.cc/j2V2gG2W/pngwing-com.png" alt="PayPal">
                </button>
            </div>
        </div>
    </div>


    <script>
        function handleLogout() {
            if (confirm('Are you sure you want to log out?')) {
                window.location.href = '/ssm/mca/slogout';
            }
        }

        function switchTab(tabName) {
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => tab.classList.remove('active'));
            tabContents.forEach(content => content.classList.remove('active'));

            const tabMapping = {
            'tuitionFeeTab': 0,
            'examFeeTab': 1,
            'attendanceTab': 2
            };

            tabs[tabMapping[tabName]].classList.add('active');

            document.getElementById(tabName).classList.add('active');
        }

        function addressUpdate() {
        window.location.href = '/ssm/mca/studentAddressUpdate/{{student._id}}';
    }

    function hideUpdateButton() {
        var updateButtonRow = document.getElementById("hideButton");
        var hideTd = document.getElementById("hideTd");
        if ({{ student.addressUpdate }}) {
            updateButtonRow.style.display = "none";
        } else {
            hideTd.style.display = "none";
        }
    }
    window.onload = function() {
        hideUpdateButton();

        const avatarImg = document.getElementById('avatar-img');
        const avatarContainer = avatarImg.parentElement;
        const studentGender = "{{ student.gender }}";

        if (studentGender === 'Male') {
            avatarImg.src = 'https://i.ibb.co/6JxYzd3/man.png';
        } else if (studentGender === 'Female') {
            avatarImg.src = 'https://i.ibb.co/Bfrp572/woman.png';
        } else {
            avatarImg.src = '';
        }

        avatarContainer.style.width = '4rem';
        avatarContainer.style.height = '4rem';
        avatarContainer.style.borderRadius = '50%';
        avatarContainer.style.overflow = 'hidden';
        avatarContainer.style.display = 'flex';
        avatarContainer.style.alignItems = 'center';
        avatarContainer.style.justifyContent = 'center';
        avatarContainer.style.backgroundColor = 'var(--primary-color)';
        avatarContainer.style.border = '3px solid var(--text-primary)';

        avatarImg.style.width = '100%';
        avatarImg.style.height = '100%';
        avatarImg.style.objectFit = 'cover';
        avatarImg.style.borderRadius = '50%';
    };

    function openPaymentPopup(type) {
        const popup = document.getElementById('paymentPopup');
        popup.setAttribute('data-type', type); 
        popup.classList.add('active');
    }

    document.getElementById('closePopup').addEventListener('click', function() {
        document.getElementById('paymentPopup').classList.remove('active');
    });

    function selectPaymentGateway(gateway) {
        const popup = document.getElementById('paymentPopup');
        const type = popup.getAttribute('data-type');
        const studentId = '{{student.studentId}}';

        let url = '';

        if (type === 'tuition') {
            if (gateway === 'stripe') url = `/ssm/mca/tuitionCreatePayment?studentId=${studentId}`;
            if (gateway === 'stripe-ejs') url = `/ssm/mca/stripeTuitionPaymentEJS?studentId=${studentId}`;
            if (gateway === 'razor') url = `/ssm/mca/tuitionCreatePaymentRazor?studentId=${studentId}`;
            if (gateway === 'paypal') url = `/ssm/mca/tuitionCreatePaymentPaypal?studentId=${studentId}`;
            if (gateway === 'cashfree') url = `/ssm/mca/tuitionCreatePaymentCashfree?studentId=${studentId}`;
        } else if (type === 'exam') {
            if (gateway === 'stripe') url = `/ssm/mca/examCreatePayment?studentId=${studentId}`;
            if (gateway === 'stripe-ejs') url = `/ssm/mca/stripeExamPaymentEJS?studentId=${studentId}`;
            if (gateway === 'razor') url = `/ssm/mca/examCreatePaymentRazor?studentId=${studentId}`;
            if (gateway === 'paypal') url = `/ssm/mca/examCreatePaymentPaypal?studentId=${studentId}`;
            if (gateway === 'cashfree') url = `/ssm/mca/examCreatePaymentCashfree?studentId=${studentId}`;
        }

        window.location.href = url;
    }

