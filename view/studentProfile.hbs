            <div class="payment-options">
                <button class="payment-option" onclick="selectPaymentGateway('cashfree')">
                    <img src="https://i.postimg.cc/R04vrL1F/cashfree-payments-logo-freelogovectors-net.png" alt="Cashfree">
                </button>
                <button class="payment-option" onclick="selectPaymentGateway('stripe-ejs')">
                    <img src="https://i.postimg.cc/HsX30cd7/Stripe.png" alt="Stripe">
                </button>
                <button class="payment-option" onclick="selectPaymentGateway('razor')">
                    <img src="https://i.postimg.cc/XYg2VW0b/razorpay.png" alt="RazorPay">
                </button>
