                            <dt>Register Number</dt>
                            <dd>{{ student.registerNumber }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Gender</dt>
                            <dd>{{ student.gender }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Date of Birth</dt>
                            <dd>{{ student.dob }}</dd>
                        </div>
                        <div class="detail-item">
                            <dt>Phone</dt>
                            <dd>+91 {{ student.phone }}</dd>
                        </div>
