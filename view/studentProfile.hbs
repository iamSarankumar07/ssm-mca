        function editAllSkills() {
            document.getElementById('skillsModal').classList.add('active');
            document.getElementById('skillsForm').reset();
            
            skillsTags = [];
            const skillElements = document.querySelectorAll('#skillsContainer .skill-badge');
            skillElements.forEach(element => {
                skillsTags.push(element.textContent);
            });
            
            updateSkillsTagsInput();
            
            document.querySelector('#skillsModal .custom-modal-header h2').textContent = 'Edit Skills';
            
            const saveBtn = document.getElementById('saveSkillsBtn');
            saveBtn.textContent = 'Save Changes';
            saveBtn.onclick = saveSkills;
        }
        
        function closeSkillsModal() {
            document.getElementById('skillsModal').classList.remove('active');
        }
        
        function updateSkillsTagsInput() {
            const container = document.getElementById('skillsModalContainer');
            const tagsElements = container.querySelectorAll('.tag-item');
            
            tagsElements.forEach(tag => {
                container.removeChild(tag);
            });
            
            skillsTags.forEach(tag => {
                const tagElement = document.createElement('div');
                tagElement.classList.add('tag-item');
                tagElement.innerHTML = `
                    ${tag}
                    <span class="tag-close" onclick="removeSkillTag('${tag}')">&times;</span>
                `;
                container.insertBefore(tagElement, document.getElementById('skillsModalInput'));
            });
            
            document.getElementById('skillsModalHidden').value = JSON.stringify(skillsTags);
        }
        
        function removeSkillTag(tag) {
            skillsTags = skillsTags.filter(t => t !== tag);
            updateSkillsTagsInput();
        }
        
        function saveSkills() {
            if (skillsTags.length === 0) {
                showToast('Please add at least one skill', 'warning');
                return;
            }
            
            const saveBtn = document.getElementById('saveSkillsBtn');
            saveBtn.disabled = true;
            saveBtn.classList.add('btn-loading');
            
            const isEdit = document.querySelector('#skillsModal .custom-modal-header h2').textContent === 'Edit Skills';
            const isNew = document.querySelector('#skillsModal .custom-modal-header h2').textContent === 'Add Skills';
            
            fetch(`/v1/api/student/save/skills`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    skills: skillsTags,
                    replaceAll: true,
                    isEdit: isEdit,
                    isNew: isNew,
                    userId: studentId
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to save skills');
                }
                return response.json();
            })
            .then(data => {
                const message = isEdit ? 'Skills updated successfully!' : 'Skills added successfully!';
                showToast(message, 'success');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Failed to save skills. Please try again.', 'error');
            })
            .finally(() => {
                saveBtn.disabled = false;
                saveBtn.classList.remove('btn-loading');
            });
        }
        
        function openAchievementModal() {
            document.getElementById('achievementModal').classList.add('active');
            document.getElementById('achievementForm').reset();
            
            document.getElementById('achievementYear').value = new Date().getFullYear();
            
