<body>
    <div class="page-container">
        <header class="header">
            <div class="header-content">
                <div class="header-icon">
                    <i class="fas fa-user-graduate"></i>
                </div>
                <h1>Student Profile</h1>
            </div>
            <button class="btn-logout" onclick="openLogoutModal()">
                <span>Logout</span>
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </header>

        <div class="row g-2">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-id-card me-1 text-primary"></i>
                            Student Details
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="profile-header">
                            <div class="avatar-container">
                                <img id="avatar-img" class="avatar-img" alt="Student Avatar">
                            </div>
                            <div class="profile-info">
                                <h3>{{ student.name }}</h3>
                                <p>{{student.course}} - {{ student.year }} Year</p>
                            </div>
                        </div>
                        <div class="details-grid">
                            <div class="detail-item">
                                <div class="detail-label">Student ID</div>
                                <div class="detail-value">{{ student.studentId }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Register Number</div>
                                <div class="detail-value">{{ student.registerNumber }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Gender</div>
                                <div class="detail-value">{{ student.gender }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Date of Birth</div>
                                <div class="detail-value">{{ student.dob }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Phone</div>
                                <div class="detail-value">+91 {{ student.phone }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Email</div>
                                <div class="detail-value">{{ student.email }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Blood Group</div>
                                <div class="detail-value">{{ student.bloodGroup }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Guardian Name</div>
                                <div class="detail-value">{{ student.parentName }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Aadhaar Number</div>
                                <div class="detail-value">{{ student.aadhaarNum }}</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Address</div>
                                <div class="detail-value" id="hideButton">
                                    <button type="button" class="btn-update" onclick="addressUpdate()">Update Address</button>
                                </div>
                                <div class="detail-value" id="hideTd">{{ student.address.address }}, {{ student.address.city }}, {{ student.address.state }}, {{ student.address.pinCode }}, {{ student.address.country }}.</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-book me-1 text-primary"></i>
                            Study Materials
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr style="text-align: center;">
                                        <th>S.No</th>
                                        <th>Subject Code</th>
                                        <th>Subject Title</th>
                                        <th>Semester</th>
                                        <th>File Size</th>
                                        <th>Download</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each studyMaterial}}
                                    <tr style="text-align: center;">
                                        <td>{{inc @index}}</td>
                                        <td>{{subjectCode}}</td>
                                        <td>{{subjectTitle}}</td>
                                        <td>{{semester}}</td>
                                        <td>{{fileSize}}</td>
                                        <td><a href="{{fileUrl}}" class="table-link"><i class="fas fa-download"></i></a></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <!-- Achievements Card -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-trophy me-1 text-primary"></i>
                            Achievements
                        </h2>
                        <div class="d-flex gap-2">
                            <button class="btn-update" id="editAchievementsBtn" onclick="toggleEditAchievements()">
                                <i class="fas fa-edit me-1"></i> Edit
                            </button>
                            <button class="btn-update" onclick="openAchievementModal()">
                                <i class="fas fa-plus me-1"></i> Add
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="achievementsContainer">
                            {{#if student.achievements.length}}
                                {{#each student.achievements}}
                                <div class="experience-item" data-id="{{_id}}">
                                    <div class="experience-header">
                                        <div class="experience-title">{{title}}</div>
                                        <div class="experience-date">{{year}}</div>
                                    </div>
                                    {{#if description}}
                                    <div class="achievement-description">{{description}}</div>
                                    {{/if}}
                                    <div class="edit-delete-controls">
                                        <button class="btn-edit" onclick="editAchievement('{{_id}}', '{{title}}', '{{year}}', '{{description}}')">
                                            <i class="fas fa-pencil-alt me-1"></i> Edit
                                        </button>
                                        <button class="btn-delete" onclick="deleteAchievement('{{_id}}')">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </button>
                                    </div>
                                </div>
                                {{/each}}
                            {{else}}
                                <p class="text-center text-muted my-3">No achievements added yet.</p>
                                <div class="d-grid">
                                    <button class="btn btn-primary" onclick="openAchievementModal()">Add Achievement</button>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Fees Card -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-money-bill-wave me-1 text-primary"></i>
                            Fees
                        </h2>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs" id="feesTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="tuition-tab" data-bs-toggle="tab" data-bs-target="#tuitionFeeTab" type="button" role="tab" aria-controls="tuitionFeeTab" aria-selected="true">Tuition Fees</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="exam-tab" data-bs-toggle="tab" data-bs-target="#examFeeTab" type="button" role="tab" aria-controls="examFeeTab" aria-selected="false">Exam Fees</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="feesTabContent">
                            <div class="tab-pane fade show active" id="tuitionFeeTab" role="tabpanel" aria-labelledby="tuition-tab">
                                <div class="d-flex justify-content-between align-items-center mb-2 mt-2">
                                    <h5 class="mb-0 fs-6">Fees Details</h5>
                                    <div class="fee-buttons-container">
                                        <button class="btn-view-requests" onclick="openFeeRequestsModal('Tuition')">
                                            <i class="fas fa-list-ul"></i> View
                                        </button>
                                        <a style="text-decoration: none;" href="/v1/api/feesUpdateRequest/{{student._id}}/Tuition" class="btn-fee-update">
                                            <i class="fas fa-edit"></i> Update
                                        </a>
                                    </div>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Semester</span>
                                    <span class="fee-value">{{student.tuitionFees.semester}}</span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Total Amount</span>
                                    <span class="fee-value">₹ {{student.tuitionFees.totalFee}}</span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Amount Due</span>
                                    <span class="fee-value">₹ {{student.tuitionFees.pendingFee}}</span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Payment Status</span>
                                    <span class="fee-value {{#if (eq student.tuitionFees.status 'Paid')}}status-paid{{else if (eq student.tuitionFees.status 'Partial')}}status-partial{{else}}status-unpaid{{/if}}">
                                        {{student.tuitionFees.status}}
                                    </span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Due Date</span>
                                    <span class="fee-value">{{student.tuitionFees.dueDate}}</span>
                                </div>
                                {{#if student.tuEditRequest.status}}
                                <div class="fee-item">
                                    <span class="fee-label">Fees update status</span>
                                    <span class="fee-value">
                                        {{#if (eq student.tuEditRequest.status "requested")}}
                                            Pending
                                        {{else}}
                                            {{student.tuEditRequest.status}}
                                        {{/if}}
                                    </span>
                                </div>
                                {{/if}}
                                {{#if (eq student.tuitionFees.paymentStatus "Paid") }}
                                {{else}}
                                <div class="d-grid gap-2 mt-2">
                                    <button class="btn btn-primary" onclick="openPaymentPopup('tuition')">Pay Tuition Fees</button>
                                </div>
                                {{/if}}
                            </div>
                            
                            <div class="tab-pane fade" id="examFeeTab" role="tabpanel" aria-labelledby="exam-tab">
                                <div class="d-flex justify-content-between align-items-center mb-2 mt-2">
                                    <h5 class="mb-0 fs-6">Fees Details</h5>
                                    <div class="fee-buttons-container">
                                        <button class="btn-view-requests" onclick="openFeeRequestsModal('Exam')">
                                            <i class="fas fa-list-ul"></i> View
                                        </button>
                                        <a style="text-decoration: none;" href="/v1/api/feesUpdateRequest/{{student._id}}/Exam" class="btn-fee-update">
                                            <i class="fas fa-edit"></i> Update
                                        </a>
                                    </div>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Semester</span>
                                    <span class="fee-value">{{student.examFees.semester}}</span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Total Amount</span>
                                    <span class="fee-value">₹ {{student.examFees.totalFee}}</span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Amount Due</span>
                                    <span class="fee-value">₹ {{student.examFees.pendingFee}}</span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Payment Status</span>
                                    <span class="fee-value {{#if (eq student.examFees.status 'Paid')}}status-paid{{else if (eq student.examFees.status 'Partial')}}status-partial{{else}}status-unpaid{{/if}}">
                                        {{student.examFees.status}}
                                    </span>
                                </div>
                                <div class="fee-item">
                                    <span class="fee-label">Due Date</span>
                                    <span class="fee-value">{{student.examFees.dueDate}}</span>
                                </div>
                                {{#if student.exEditRequest.status}}
                                <div class="fee-item">
                                    <span class="fee-label">Fees update status</span>
                                    <span class="fee-value">
                                        {{#if (eq student.exEditRequest.status "requested")}}
                                            Pending
                                        {{else}}
                                            {{student.exEditRequest.status}}
                                        {{/if}}
                                    </span>
                                </div>
                                {{/if}}
                                {{#if (eq student.examFees.status "Paid") }}
                                {{else}}
                                <div class="d-grid gap-2 mt-2">
                                    <button class="btn btn-primary" onclick="openPaymentPopup('exam')">Pay Exam Fees</button>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Attendance Card -->
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-calendar-check me-1 text-primary"></i>
                            Attendance
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="mb-0 fs-6">Attendance Details</h5>
                            <button id="studentAttendanceBtn" class="btn-check-in" onclick="submitStudentAttendance()">Check-In</button>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Present Days</span>
                            <span class="fee-value">{{attendanceSummary.present}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Absent Days</span>
                            <span class="fee-value">{{attendanceSummary.absent}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Excused Days</span>
                            <span class="fee-value">{{attendanceSummary.excused}}</span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">Total Late Days</span>
                            <span class="fee-value">{{attendanceSummary.late}}</span>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-cogs me-1 text-primary"></i>
                            Skills
                        </h2>
                        <div class="d-flex gap-2">
                            <button class="btn-update" id="editSkillsBtn" onclick="editAllSkills()">
                                <i class="fas fa-edit me-1"></i> Edit
                            </button>
                            <button class="btn-update" onclick="openSkillsModal()">
                                <i class="fas fa-plus me-1"></i> Add
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="skillsContainer">
                            {{#if student.skills.length}}
                                <div class="badge-container">
                                    {{#each student.skills}}
                                    <span class="skill-badge">{{this}}</span>
                                    {{/each}}
                                </div>
                            {{else}}
                                <p class="text-center text-muted my-3">No skills added yet.</p>
                                <div class="d-grid">
                                    <button class="btn btn-primary" onclick="openSkillsModal()">Add Skills</button>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">
                            <i class="fas fa-tools me-1 text-primary"></i>
                            Other Services
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="fee-item">
                            <span class="fee-label">Exam Results</span>
                            <span class="fee-value">
                                <a href="/v1/api/getStudentExamResults" class="service-link">
                                    <i class="fas fa-graduation-cap service-icon"></i>
                                </a>
                            </span>
                        </div>
                        <div class="fee-item">
                            <span class="fee-label">{{student.course}} Chatroom</span>
                            <span class="fee-value">
