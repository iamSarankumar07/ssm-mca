<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Sender</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
      * {
      font-family: "Poppins", sans-serif;
    }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            text-align: center;
            color: #3d6ef5ff;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            position: relative;
        }
        input, select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .form-group select,
        .form-group input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        input,
        textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            font-family: sans-serif;
            border-radius: 4px;
            font-size: 14px;
            max-height: 150px; 
            resize: none;
        }

        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            appearance: none;
            background-image: url('data:image/svg+xml;utf8,<svg fill="black" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/><path d="M0 0h24v24H0z" fill="none"/></svg>');
            background-repeat: no-repeat;
            background-position: right 8px center;
            background-size: 16px;
            cursor: pointer;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        button[type="submit"],
        button[type="button"] {
            width: 30%;
            background-color: #3d6ef5ff;
            color: #f2f2f2;
            font-weight: bold;
            padding: 8px 14px;
            border: none;
            font-size: 12px;
            border-radius: 5px;
            border: 2px solid #3d6ef5ff;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover,
        button[type="button"]:hover {
            background-color: #f2f2f2;
            color: #3d6ef5ff;
            font-weight: bold;
        }
        
    </style>
</head>
<body>
    <form id="emailForm" action="/ssm/mca/commonAnnouncement" method="post">
        <h1>Common Announcement</h1>

        <label for="year">To:</label>
        <select id="type" name="type" required onchange="toggleGraduationYear()">
            <option value="">Select</option>
            <option value="first">MCA-I</option>
            <option value="second">MCA-II</option>
            <option value="mca">MCA I & II</option>
            <option value="alumni">Alumni</option>
            <option value="alumniAll">Alumni All</option>
        </select>

        <div id="graduationYearDiv" style="display:none;">
            <label for="graduationYear">Graduation Year:</label>
            <input type="text" id="graduationYear" name="graduationYear" pattern="\d{4}" maxlength="4" oninput="this.value=this.value.replace(/[^0-9]/g, '').slice(0,4)" />
        </div>

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject" required>

        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="4" required></textarea>

        <div class="button-container">
            <button type="button" onclick="goBack()">Back</button>
            <button type="submit" id="firstYrMail">Send</button>
        </div>
    </form>
    <script>
        function goBack() {
            window.location.href = '/ssm/mca/dashboard';
        }

        function toggleGraduationYear() {
            var yearSelect = document.getElementById('type');
            var graduationYearDiv = document.getElementById('graduationYearDiv');
            if (yearSelect.value === 'alumni') {
                graduationYearDiv.style.display = 'block';
            } else {
                graduationYearDiv.style.display = 'none';
            }
        }
    </script>
</body>
</html>
