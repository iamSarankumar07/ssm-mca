<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Admission Application</title>
    <style>
         @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            background-color: #ffffff;
            width: 100%;
            height: 100%;
            display: flex;
            overflow: hidden;
        }

        .form-header {
            background-color: #3d6ef5;
            color: #ffffff;
            padding: 30px;
            width: 25%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-header h1 {
            font-size: 28px;
            margin-bottom: 15px;
        }

        .form-header p {
            font-size: 16px;
            opacity: 0.8;
        }

        .form-content {
            padding: 30px;
            width: 75%;
            overflow-y: auto;
        }

        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            flex: 1;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 14px;
            color: #333;
        }

        input, select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            transition: border-color 0.3s;
            resize: none;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: #3d6ef5;
        }

        .button-group {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 30px;
        }

        button {
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.1s;
        }

        button:active {
            transform: scale(0.98);
        }

        button[type="submit"] {
            background-color: #3d6ef5;
            color: #ffffff;
        }

        button[type="submit"]:hover {
            background-color: #2c5ae9;
        }

        button[type="button"] {
            background-color: #f0f2f5;
            color: #333;
        }

        button[type="button"]:hover {
            background-color: #e4e6e9;
        }

        @media (max-width: 1024px) {
            .form-container {
                flex-direction: column;
            }

            .form-header, .form-content {
                width: 100%;
            }

            .form-header {
                padding: 20px;
            }

            .form-content {
                height: calc(100% - 150px);
                overflow-y: auto;
            }
        }

        @media (max-width: 768px) {
            .form-row {
                flex-direction: column;
            }

            .button-group {
                flex-direction: column;
            }

            button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h1>College Admission Form</h1>
            <p>Please fill out the form to apply for admission. Ensure all information is accurate and complete.</p>
        </div>
        <div class="form-content">
            <form action="/ssm/mca/admissionApply" method="post">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Full Name:</label>
                        <input type="text" id="name" name="name" placeholder="Enter your full name" required>
                    </div>
                    <div class="form-group">
                        <label for="fatherName">Father's Name:</label>
                        <input type="text" id="fatherName" name="fatherName" placeholder="Enter your father's full name" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="dob">Date of Birth:</label>
                        <input type="date" id="dob" name="dob" required>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender:</label>
                        <select id="gender" name="gender" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="phone">Phone Number:</label>
                        <input type="tel" id="phone" name="phone" placeholder="Enter 10-digit phone number" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address:</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <textarea id="address" name="address" rows="3" placeholder="Enter your full address" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="program">Program Applied For:</label>
                        <select id="program" name="program" required>
                            <option value="">Select Program</option>
                            <option value="BCA">BCA</option>
                            <option value="MCA">MCA</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                <div class="form-group">
                    <label for="previousQualification">Previous Qualification:</label>
                    <select id="previousQualification" name="previousQualification" required>
                        <option value="">Select Qualification</option>
                        <option value="High School">High School</option>
                        <option value="Undergraduate">Undergraduate</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="tenthMarks">10th Grade Marks:</label>
                    <input type="text" id="tenthMarks" name="tenthMarks" step="0.01" min="0" max="100" placeholder="Enter your 10th grade marks" required>
                </div>
                <div class="form-group">
                    <label for="twelfthMarks">12th Grade Marks:</label>
                    <input type="text" id="twelfthMarks" name="twelfthMarks" step="0.01" min="0" max="100" placeholder="Enter your 12th grade marks" required>
                </div>
                <div class="form-group" id="ugPercentageField" style="display: none;">
                    <label for="ugPercentage">Undergraduate Percentage:</label>
                    <input type="text" id="ugPercentage" name="ugPercentage" step="0.01" min="0" max="100" placeholder="Enter your undergraduate %">
                </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="emergencyContact">Emergency Contact Name:</label>
                        <input type="text" id="emergencyContact" name="emergencyContact" placeholder="Enter emergency contact name" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="emergencyPhone">Emergency Contact Phone:</label>
                        <input type="text" id="emergencyPhone" name="emergencyPhone" placeholder="Enter emergency contact phone" required>
                    </div>
                </div>

                <div class="button-group">
                    <button type="button" onclick="window.location.href='/';">Back</button>
                    <button type="submit">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        
        document.getElementById("phone").addEventListener("input", function() {
        this.value = this.value.replace(/\D/g, '');
        if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
        }
        });
        document.getElementById("tenthMarks").addEventListener("input", function() {
        this.value = this.value.replace(/\D/g, '');
        if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
        }
        });
        document.getElementById("twelfthMarks").addEventListener("input", function() {
        this.value = this.value.replace(/\D/g, '');
        if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
        }
        document.getElementById("ugPercentage").addEventListener("input", function() {
        this.value = this.value.replace(/\D/g, '');
        if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
        }
        });
        document.getElementById("emergencyPhone").addEventListener("input", function() {
        this.value = this.value.replace(/\D/g, '');
        if (this.value.length > 10) {
            this.value = this.value.slice(0, 10);
        }
        });

        function redirect() {
            window.location.href = "/ssm/mca/dashboard";
        }

        document.getElementById("previousQualification").addEventListener("change", function() {
            const ugField = document.getElementById("ugPercentageField");
            if (this.value === "Undergraduate") {
                ugField.style.display = "block";
            } else {
                ugField.style.display = "none";
                document.getElementById("ugPercentage").value = "";
            }
        });
    </script>
</body>
</html>

