<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image List</title>
    <link rel="icon" href="https://your-favicon-url.png"> 
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            max-width: 1200px;
            margin: 20px auto; 
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: auto; 
        }
        h1 {
            text-align: center;
            color: #fff;
            background-color: #3d6ef5ff;
            border-radius: 5px;
            padding: 4px;
            margin: 0; 
        }
        h2 {
            color: #3d6ef5ff;
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #dee2e6;
            padding: 12px;
        }
        .td {
            text-align: center;
        }
        th {
            background-color: #3d6ef5ff;
            color: #fff;
        }
        .edit-icon, .delete-icon {
            text-decoration: none;
            color: #3d6ef5ff;
            transition: color 0.3s;
        }
        .edit-icon:hover, .delete-icon:hover {
            color: #0056b3;
        }
        .btn-container {
            text-align: center;
            margin-top: 20px;
        }
        .btn {
            padding: 8px 14px;
            color: #fff;
            border: 2px solid #3d6ef5ff;
            background: #3d6ef5ff;
            font-weight: bold;
            text-decoration: none;
            font-size: 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.4s, color 0.4s;
        }
        .btn:hover {
            background: #fff;
            color: #3d6ef5ff;
        }
        .back-button {
            position: absolute;
            top: 45px;
            left: 12.3%; 
            text-decoration: none;
        }
        .back-button img {
            width: 45px;
            height: 45px;
            margin-left: 8px;
            vertical-align: middle;
        }
        .icon-img {
            width: 25px;
            height: 25px;
            vertical-align: middle;
        }
        .modal {
            display: none; 
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            text-align: center;
            max-width: 500px;
            width: 90%;
        }
        .modal-content img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }
        .close:hover {
            color: #000;
        }
        .view-link {
            text-decoration: none;
            cursor: pointer;
        }

        .view-link:hover .icon-img {
            transform: scale(1.2);
            filter: brightness(1.5);
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Images List</h1>
    <a href="/ssm/mca/dashboard" class="back-button">
        <img src="https://i.postimg.cc/Ghw7c3bx/back-button-white.png" alt="Go Back">
    </a>
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Uploaded Date</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {{#each formatedData}}
        <tr>
            <td class="td">{{title}}</td>
            <td class="td">{{description}}</td>
            <td class="td">{{createdAt}}</td>
            <td class="td" style="font-weight: bold;">
                <a href="javascript:void(0);" class="view-link" data-img="{{imageUrl}}">
                    <img src="https://i.postimg.cc/XYNnzjf1/vision-1.png" alt="View" 
                    >
                </a>
            </td>
            <td class="td" style="font-weight: bold;">
                <a href="/ssm/mca/imageEdit/{{_id}}" class="view-link">
                    <img src="https://i.postimg.cc/W3JmZGw3/user-avatar.png" alt="Edit" class="icon-img">
                </a>
            </td>
            <td class="td" style="font-weight: bold;">
                <a href="/ssm/mca/imageDelete/{{_id}}" class="view-link" onclick="return confirm('Are You Sure You Want To Delete ?')">
                    <img src="https://i.postimg.cc/J0VN5spQ/remove-1.png" alt="Delete" class="icon-img">
                </a>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>

    <br>

    <div class="btn-container">
        <a class="btn" href="/ssm/mca/dashboard">< Go back!</a>
    </div>
</div>

<div id="imageModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <img id="modalImage" src="" alt="View Image">
    </div>
</div>

<script>
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    const closeModal = document.querySelector('.close');

    document.querySelectorAll('.view-icon').forEach(icon => {
        icon.addEventListener('click', function () {
            const imageUrl = this.dataset.img;
            modalImage.src = imageUrl;
            modal.style.display = 'flex';
        });
    });

    closeModal.addEventListener('click', () => {
        modal.style.display = 'none';
    });

    window.addEventListener('click', (e) => {
        if (e.target === modal) {
            modal.style.display = 'none';
        }
    });
    document.querySelectorAll('.view-link').forEach(link => {
        link.addEventListener('click', function () {
            const imageUrl = this.dataset.img;
            modalImage.src = imageUrl;
            modal.style.display = 'flex';
        });
    });
</script>

</body>
</html>
