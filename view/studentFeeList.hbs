            {{/each}}
            </tbody>
        </table>
        <div class="btn-container">
                <button class="btn" style="margin-bottom: 10px;" onclick="printSecondYearFee()">Print</button>
            <form id="downloadForm" action="/ssm/mca/studentTuitionDownload" method="post">
