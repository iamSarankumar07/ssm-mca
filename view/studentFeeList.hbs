            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Student ID</th>
                <th>Gender</th>
                <th>Total Fee</th>
                <th>Paid Fee</th>
                <th>Pending Fee</th>
                <th>Payment Status</th>
                <th>Edit</th>
            </tr>
            </thead>
            <tbody id="table2">
            {{#each secondYearStudents}}
