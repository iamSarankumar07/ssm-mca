<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Registration</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
        * {
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }
        body {
            background-color: #f4f4f4;
            margin: 0;
            padding: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        form {
            width: 100%;
            max-width: 1400px;
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #3d6ef5;
            text-align: center;
            margin-bottom: 15px;
            font-size: 1.5em;
        }
        .form-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }
        .form-group {
            margin-bottom: 8px;
        }
        label {
            display: block;
            margin-bottom: 3px;
            color: #333;
            font-weight: bold;
            font-size: 0.9em;
        }
        input,
        select {
            width: 100%;
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 0.9em;
        }
        .button-container {
            grid-column: 1 / -1;
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }
        button {
            width: 120px;
            background-color: #3d6ef5;
            color: #f2f2f2;
            font-weight: bold;
            padding: 8px;
            border: none;
            font-size: 0.9em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
        }
        button:hover {
            background-color: #f2f2f2;
            color: #3d6ef5;
            border: 2px solid #3d6ef5;
        }
        @media (max-width: 1200px) {
            .form-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        @media (max-width: 900px) {
            .form-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        @media (max-width: 600px) {
            .form-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <form action="/ssm/mca/studentUpdate/{{student._id}}" method="post">
        <h2>Student Edit Form</h2>
        <br>
        <div class="form-grid">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="{{student.name}}" required>
            </div>
            <div class="form-group">
                <label for="registerNumber">Register Number:</label>
                <input type="text" id="registerNumber" name="registerNumber" value="{{student.registerNumber}}" required>
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth:</label>
                <input type="text" id="dob" name="dob" value="{{student.dob}}" placeholder="DD-MM-YYYY" required>
            </div>
            <div class="form-group">
                <label for="gender">Gender:</label>
                <select id="gender" name="gender" value="{{student.gender}}" required>
                    <option value="{{student.gender}}">{{student.gender}}</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="year">Year:</label>
                <select id="year" name="year" value="{{student.year}}" required>
                    <option value="{{student.year}}">MCA-{{student.year}}</option>
                    <option value="I">MCA-I</option>
                    <option value="II">MCA-II</option>
                </select>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="{{student.email}}" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="tel" id="phone" name="phone" value="{{student.phone}}" required>
            </div>
            <div class="form-group">
                <label for="aadhaarNum">Aadhaar Number:</label>
                <input type="text" id="aadhaarNum" name="aadhaarNum" value="{{student.aadhaarNum}}" maxlength="14" oninput="formatAadhaar(this)" required>
            </div>
            <div class="form-group">
                <label for="totalFee">Total Fees:</label>
                <input type="text" id="totalFee" name="totalFee" value="{{student.totalFee}}" required>
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" value="{{student.address.address}}" required>
            </div>
            <div class="form-group">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" value="{{student.address.city}}" required>
            </div>
            <div class="form-group">
