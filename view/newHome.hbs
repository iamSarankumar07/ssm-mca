                `;

                container.appendChild(eventCard);
            });

            const eventsContainer = document.getElementById('events-scroll-container');
            eventsContainer.addEventListener('mouseenter', function () {
                isEventsHovered = true;
            });
            eventsContainer.addEventListener('mouseleave', function () {
                isEventsHovered = false;
            });
            
            eventsContainer.addEventListener('touchstart', function() {
                isEventsHovered = true;
            });
            eventsContainer.addEventListener('touchend', function() {
                setTimeout(function() {
                    isEventsHovered = false;
                }, 3000); 
            });

            updateEventsNavButtons();
        }

        function startNewsAutoScroll() {
            if (newsItems.length <= 1) return;

            newsAutoScrollInterval = setInterval(function () {
                if (!isNewsHovered) {
                    autoScrollNews();
                }
            }, 3000);
        }

        function startEventsAutoScroll() {
            if (eventsItems.length <= 1) return;

            eventsAutoScrollInterval = setInterval(function () {
                if (!isEventsHovered) {
                    autoScrollEvents();
                }
            }, 3000);
        }

        function autoScrollNews() {
            const container = document.getElementById('news-container');
            const containerWidth = container.scrollWidth / 2; 

            newsPosition += scrollAmount;

            if (newsPosition >= containerWidth) {
                newsPosition = 0;
            }

            container.style.transform = `translateX(-${newsPosition}px)`;
            updateNewsNavButtons();
        }

        function autoScrollEvents() {
            const container = document.getElementById('events-container');
            const containerWidth = container.scrollWidth / 2; 

            eventsPosition += scrollAmount;

            if (eventsPosition >= containerWidth) {
                eventsPosition = 0;
            }

            container.style.transform = `translateX(-${eventsPosition}px)`;
            updateEventsNavButtons();
        }

        function scrollNewsLeft() {
            const container = document.getElementById('news-container');
            const containerWidth = container.scrollWidth / 2;

            newsPosition = Math.max(newsPosition - scrollAmount, 0);
            container.style.transform = `translateX(-${newsPosition}px)`;

            updateNewsNavButtons();
        }

        function scrollNewsRight() {
            const container = document.getElementById('news-container');
            const containerWidth = container.scrollWidth / 2;

            newsPosition += scrollAmount;

            if (newsPosition >= containerWidth) {
                newsPosition = 0;
            }

            container.style.transform = `translateX(-${newsPosition}px)`;
            updateNewsNavButtons();
        }

        function updateNewsNavButtons() {
            document.getElementById('news-prev').disabled = false;
            document.getElementById('news-next').disabled = false;
        }

        function scrollEventsLeft() {
            const container = document.getElementById('events-container');
            const containerWidth = container.scrollWidth / 2;

            eventsPosition = Math.max(eventsPosition - scrollAmount, 0);
            container.style.transform = `translateX(-${eventsPosition}px)`;

            updateEventsNavButtons();
        }

        function scrollEventsRight() {
            const container = document.getElementById('events-container');
            const containerWidth = container.scrollWidth / 2;

            eventsPosition += scrollAmount;

            if (eventsPosition >= containerWidth) {
                eventsPosition = 0;
            }

            container.style.transform = `translateX(-${eventsPosition}px)`;

            updateEventsNavButtons();
        }

        function updateEventsNavButtons() {
            document.getElementById('events-prev').disabled = false;
            document.getElementById('events-next').disabled = false;
        }

        document.getElementById('news-prev').addEventListener('click', function () {
            scrollNewsLeft();
            if (newsAutoScrollInterval) {
                clearInterval(newsAutoScrollInterval);
                startNewsAutoScroll();
            }
        });

        document.getElementById('news-next').addEventListener('click', function () {
            scrollNewsRight();
            if (newsAutoScrollInterval) {
                clearInterval(newsAutoScrollInterval);
                startNewsAutoScroll();
            }
        });

        document.getElementById('events-prev').addEventListener('click', function () {
            scrollEventsLeft();
            if (eventsAutoScrollInterval) {
                clearInterval(eventsAutoScrollInterval);
                startEventsAutoScroll();
            }
        });

        document.getElementById('events-next').addEventListener('click', function () {
            scrollEventsRight();
            if (eventsAutoScrollInterval) {
                clearInterval(eventsAutoScrollInterval);
                startEventsAutoScroll();
            }
        });

