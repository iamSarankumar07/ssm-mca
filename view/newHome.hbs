            background-position: center;
            background-size: cover;
            background-color: #ccc;
            position: relative;
        }
        nav {
            display: flex;
            padding: 1% 3%; /* Reduced padding */
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }
        nav img {
            width: 140px; /* Reduced logo width */
        }
        .nav-links {
            flex: 1;
            text-align: right;
        }
        .nav-links ul li {
            list-style: none;
            display: inline-block;
            padding: 6px 10px; /* Reduced padding */
            position: relative;
        }
        .nav-links ul li a {
            color: #333;
            text-decoration: none;
            font-size: 14px; /* Reduced font size */
        }
        .nav-links ul li::after {
            content: "";
            width: 0%;
            height: 2px;
            background: #3d6ef5ff;
            display: block;
            margin: auto;
            transition: 0.5s;
        }
        .nav-links ul li:hover::after {
            width: 100%;
        }
        .text-box {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: #fff;
            width: 90%;
        }
        .text-box h1 {
            font-size: 48px;
        }
        .text-box p {
            margin: 10px 0 40px;
            font-size: 14px;
        }
        .hero-btn {
            display: inline-block;
            text-decoration: none;
            color: #fff;
            border: 1px solid #fff;
            padding: 12px 34px;
            font-size: 13px;
            background-color: transparent;
            position: relative;
            border-radius: 5px;
            cursor: pointer;
            transition: .4s;
        }
        .hero-btn:hover {
            border: 1px solid #3d6ef5ff;
            background: #3d6ef5ff;
            border-radius: 5px;
            transition: .4s;
        }
        .hero-btn-red-btn {
            display: inline-block;
            text-decoration: none;
            color: #3d6ef5ff;
            border: 1px solid #ccc;
            padding: 12px 34px;
            font-size: 13px;
            background-color: transparent;
            position: relative;
            cursor: pointer;
            border-radius: 5px;
            transition: .4s;
        }
        .hero-btn-red-btn:hover {
            border: 1px solid #3d6ef5ff;
            background: #3d6ef5ff;
            color: #fff;
            border-radius: 5px;
            transition: .4s;
        }
        nav .fa {
            display: none;
            color: #3d6ef5ff;
        }
        @media (max-width: 700px) {
            .text-box h1 {
                font-size: 20px;
            }
            .nav-links ul li {
                display: block;
            }
            .nav-links {
                position: fixed;
                background: #fff;
                height: 100vh;
                width: 200px;
                top: 0;
                right: -200px;
                text-align: left;
                z-index: 2;
                transition: 0.5s;
            }
            nav .fa {
                display: block;
                color: #3d6ef5ff;
                margin: 10px;
                font-size: 22px;
                cursor: pointer;
            }
            .nav-links ul {
