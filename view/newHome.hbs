        const counterElements = document.querySelectorAll('.counter-number');

        function animateCounter() {
            counterElements.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-count'));
                const count = parseInt(counter.innerText);
                const increment = target / 100;

                if (count < target) {
                    counter.innerText = Math.ceil(count + increment);
                    setTimeout(animateCounter, 60);
                } else {
                    counter.innerText = target;
                }
            });
        }

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCounter();
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });

        document.querySelector('.stats-counter').querySelectorAll('.counter-item').forEach(item => {
            observer.observe(item);
        });

        var successModal = new bootstrap.Modal(document.getElementById('successModal'));

        document.getElementById('send-button').onclick = function () {
            var name = document.getElementById('name').value.trim();
            var email = document.getElementById('email').value.trim();
            var message = document.getElementById('message').value.trim();

            if (!name || !email || !message) {
                alert('Please fill in all fields before sending the message.');
                return;
            }

            let obj = {
                name: name,
                email: email,
                message: message,
            };

            fetch('/v1/api/userContact', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(obj),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        successModal.show();
                        document.getElementById('contactForm').reset();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    alert('There was a network error. Please try again later.');
                    console.error(error);
                });
        };

        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');

            function highlightActiveLink() {
                const scrollPosition = window.scrollY;

                document.querySelectorAll('section').forEach(section => {
                    const sectionTop = section.offsetTop - 100;
                    const sectionHeight = section.offsetHeight;
                    const sectionId = section.getAttribute('id');

                    if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href') === `#${sectionId}`) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }

            window.addEventListener('scroll', highlightActiveLink);
            highlightActiveLink();

            fetchNews();

            fetchEvents();
        });

        let newsItems = [];
        let eventsItems = [];
        const scrollAmount = 300; 
        let newsPosition = 0;
        let eventsPosition = 0;
        let newsAutoScrollInterval;
        let eventsAutoScrollInterval;
        let isNewsHovered = false;
        let isEventsHovered = false;

        function fetchNews() {
            document.getElementById('news-container').innerHTML = `
                <div class="loading-spinner">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;

            fetch('/v1/api/home/news')
                .then(response => response.json())
                .then(data => {
                    newsItems = data;
                    renderNewsItems();
                    startNewsAutoScroll();
                })
                .catch(error => {
                    console.error('Error fetching news:', error);
                    newsItems = getDummyNews();
                    renderNewsItems();
                    startNewsAutoScroll();
                });
        }

        function fetchEvents() {
            document.getElementById('events-container').innerHTML = `
                <div class="loading-spinner">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            `;

            fetch('/v1/api/home/events')
                .then(response => response.json())
                .then(data => {
                    eventsItems = data;
                    renderEventsItems();
                    startEventsAutoScroll();
                })
                .catch(error => {
                    console.error('Error fetching events:', error);
                    eventsItems = getDummyEvents();
                    renderEventsItems();
                    startEventsAutoScroll();
                });
        }

        function renderNewsItems() {
            const container = document.getElementById('news-container');
            container.innerHTML = '';

            if (!newsItems || newsItems.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-5">
                        <p class="text-secondary">No news available at the moment.</p>
                    </div>
                `;
                return;
            }

            const allItems = [...newsItems, ...newsItems];

            allItems.forEach(item => {
                const date = new Date(item.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });

                const newsCard = document.createElement('div');
                newsCard.className = 'news-card';

                newsCard.innerHTML = `
                    <div class="news-img-container">
                        <img src="${item.imageUrl || '/placeholder.svg?height=200&width=400'}" class="news-img" alt="${item.title}">
                    </div>
                    <div class="news-content">
                        <span class="news-date">${date}</span>
                        <h3 class="news-title">${item.title}</h3>
                        <p class="news-description">${item.description}</p>
                        <a href="${item.link || '#'}" class="btn btn-sm btn-outline-primary">Read More</a>
                    </div>
                `;

                container.appendChild(newsCard);
            });

            const newsContainer = document.getElementById('news-scroll-container');
            newsContainer.addEventListener('mouseenter', function () {
                isNewsHovered = true;
            });
            newsContainer.addEventListener('mouseleave', function () {
                isNewsHovered = false;
            });
            
            newsContainer.addEventListener('touchstart', function() {
                isNewsHovered = true;
            });
            newsContainer.addEventListener('touchend', function() {
                setTimeout(function() {
                    isNewsHovered = false;
                }, 3000); 
            });

            updateNewsNavButtons();
        }

        function renderEventsItems() {
            const container = document.getElementById('events-container');
            container.innerHTML = '';

            if (!eventsItems || eventsItems.length === 0) {
                container.innerHTML = `
