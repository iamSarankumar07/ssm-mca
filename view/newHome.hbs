    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');
        * {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            font-weight: bold;
            padding: 0;
            box-sizing: border-box;
        }
        html{
            scroll-behavior: smooth;
        }
        .header {
            min-height: 100vh;
            width: 100%;
