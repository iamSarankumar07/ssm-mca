    <!-- Logout Modal -->
    <div class="logout-modal" id="logoutModal">
        <div class="logout-modal-content">
            <div class="logout-modal-header">
                <h2>Confirm Logout</h2>
                <button class="logout-modal-close" id="closeLogoutModal" aria-label="Close">&times;</button>
            </div>
            <div class="logout-modal-body">
                <div class="logout-modal-icon">
                    <i class="fas fa-sign-out-alt"></i>
                </div>
                <div class="logout-modal-message">
                    Are you sure you want to log out of your account?
                </div>
                <div class="logout-modal-footer">
                    <button class="btn-cancel" id="cancelLogout">Cancel</button>
                    <button class="btn-confirm-logout" onclick="confirmLogout()">Logout</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openLogoutModal() {
            document.getElementById('logoutModal').classList.add('active');
        }
        
        function closeLogoutModal() {
            document.getElementById('logoutModal').classList.remove('active');
        }
        
        function confirmLogout() {
            window.location.href = '/v1/api/alogout';
        }

        function addressUpdate() {
            window.location.href = '/v1/api/alumniAddressUpdate/{{alumni._id}}';
        }

        function hideUpdateButton() {
            var updateButtonRow = document.getElementById("hideButton");
            var hideTd = document.getElementById("hideTd");
            if ({{ alumni.addressUpdate }}) {
                updateButtonRow.style.display = "none";
            } else {
                hideTd.style.display = "none";
            }
        }
        
        function addExperience() {
            window.location.href = '/v1/api/alumni/addExperience/{{alumni._id}}';
        }
        
        function addAchievement() {
            window.location.href = '/v1/api/alumni/addAchievement/{{alumni._id}}';
        }
        
        function addSkills() {
            window.location.href = '/v1/api/alumni/addSkills/{{alumni._id}}';
        }

        window.onload = function() {
            hideUpdateButton();

            const avatarImg = document.getElementById('avatar-img');
            const alumniGender = "{{ alumni.gender }}";
            const alumniImg = "{{ alumni.imageUrl }}";

            if (alumniImg) {
                avatarImg.src = alumniImg;
            } else if (alumniGender === 'Male') {
                avatarImg.src = 'https://i.ibb.co/6JxYzd3/man.png';
            } else if (alumniGender === 'Female') {
                avatarImg.src = 'https://i.ibb.co/Bfrp572/woman.png';
            } else {
                avatarImg.src = '';
            }
            
            // Set up event listeners for logout modal
            document.getElementById('closeLogoutModal').addEventListener('click', closeLogoutModal);
            document.getElementById('cancelLogout').addEventListener('click', closeLogoutModal);
        };
    </script>
