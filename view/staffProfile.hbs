                    </div>
                    <div class="leave-balance-item">
                        <div class="leave-balance-label">Earned Leave</div>
                        <div class="leave-balance-value">{{staff.leaveBalance.earned}} / {{staff.leaveBalance.earnedTotal}}</div>
                    </div>
                </div>
                
                <form id="leaveForm" onsubmit="submitLeaveApplication(event)">
                    <div class="leave-form-row">
                        <div class="leave-form-col">
                            <div class="leave-form-group">
                                <label for="leaveType" class="leave-form-label">Leave Type <span class="text-danger">*</span></label>
                                <select id="leaveType" class="leave-form-control" required>
                                    <option value="">Select Leave Type</option>
                                    <option value="Casual">Casual Leave</option>
                                    <option value="Sick">Sick Leave</option>
                                    <option value="Earned">Earned Leave</option>
                                    <option value="Maternity">Maternity/Paternity Leave</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="leave-form-row">
                        <div class="leave-form-col">
                            <div class="leave-form-group">
                                <label for="startDate" class="leave-form-label">Start Date <span class="text-danger">*</span></label>
                                <input type="date" id="startDate" class="leave-form-control" required>
                            </div>
                        </div>
                        <div class="leave-form-col">
                            <div class="leave-form-group">
                                <label for="endDate" class="leave-form-label">End Date <span class="text-danger">*</span></label>
                                <input type="date" id="endDate" class="leave-form-control" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="leave-form-group">
                        <label for="reason" class="leave-form-label">Reason for Leave <span class="text-danger">*</span></label>
                        <textarea id="reason" class="leave-form-control" rows="4" placeholder="Please provide detailed reason for your leave request" required></textarea>
                    </div>
                    
                    <div class="leave-form-group">
                        <label class="leave-form-label">Supporting Documents (if any)</label>
                        <div class="file-upload-container">
                            <label for="attachment" class="file-upload-label">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <span>Click to upload or drag and drop</span>
                            </label>
                            <input type="file" id="attachment" class="file-upload-input">
                            <div id="fileName" class="file-name"></div>
                        </div>
                        <small class="text-muted">Accepted file formats: PDF, JPG, PNG (Max size: 5MB)</small>
                    </div>
                    
                    <div class="leave-form-footer">
                        <button type="submit" class="leave-form-submit">
                            <i class="fas fa-paper-plane"></i>
                            Submit Leave Application
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="history-popup" id="leaveHistoryPopup">
        <div class="history-popup-content">
            <div class="history-popup-header">
                <h2>Leave History</h2>
                <button class="history-popup-close" id="closeHistoryPopup" aria-label="Close">&times;</button>
            </div>
            <div class="history-popup-body">
                <div class="history-filters">
                    <div class="history-filter-item">
                        <label for="leaveTypeFilter" class="leave-form-label">Leave Type</label>
                        <select id="leaveTypeFilter" class="leave-form-control" onchange="filterLeaveHistory()">
                            <option value="">All Types</option>
                            <option value="Casual">Casual Leave</option>
                            <option value="Sick">Sick Leave</option>
                            <option value="Earned">Earned Leave</option>
                            <option value="Maternity">Maternity/Paternity Leave</option>
                        </select>
                    </div>
                    <div class="history-filter-item">
                        <label for="statusFilter" class="leave-form-label">Status</label>
                        <select id="statusFilter" class="leave-form-control" onchange="filterLeaveHistory()">
                            <option value="">All Status</option>
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>
                    <div class="history-filter-item">
                        <label for="yearFilter" class="leave-form-label">Year</label>
                        <select id="yearFilter" class="leave-form-control" onchange="filterLeaveHistory()">
                            <option value="">All Years</option>
                            <option value="2023">2023</option>
                            <option value="2022">2022</option>
                            <option value="2021">2021</option>
                        </select>
                    </div>
                </div>
                
                <div id="leaveHistoryLoading" class="loading-spinner">
                    <div class="spinner"></div>
                </div>
                
                <div id="leaveHistoryEmpty" class="empty-state" style="display: none;">
                    <div class="empty-state-icon">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <div class="empty-state-text">
                        No leave history found. Apply for leave to see your history here.
                    </div>
                </div>
                
                <div id="leaveHistoryTable" class="history-table-container" style="display: none;">
                    <table class="history-table">
                        <thead>
                            <tr>
                                <th>Leave Type</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Days</th>
                                <th>Reason</th>
                                <th>Applied On</th>
                                <th>Status</th>
                                <th>Comment</th>
                                <th>Attachment</th>
                            </tr>
                        </thead>
                        <tbody id="leaveHistoryTableBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let leaveHistoryData = [];
        let filteredLeaveHistory = [];
        let sensitiveData = {
            accountNumber: "{{ staff.bankDetails.accountNumber }}",
            upiId: "{{ staff.bankDetails.upiId }}"
        };
        
        function openLogoutModal() {
            document.getElementById('logoutModal').classList.add('active');
        }
        
        function closeLogoutModal() {
            document.getElementById('logoutModal').classList.remove('active');
        }
        
        function confirmLogout() {
            window.location.href = '/v1/api/logout';
        }

        window.onload = function() {
            const avatarImg = document.getElementById('avatar-img');
            const staffGender = "{{ staff.gender }}";
            const staffImg = "{{ staff.imageUrl }}";

            if (staffImg && staffImg.trim() !== '') {
                avatarImg.src = staffImg;
            } else if (staffGender === 'Male') {
                avatarImg.src = 'https://i.ibb.co/6JxYzd3/man.png';
            } else if (staffGender === 'Female') {
                avatarImg.src = 'https://i.ibb.co/Bfrp572/woman.png';
            } else {
                avatarImg.src = 'https://i.ibb.co/6JxYzd3/man.png';
            }

            fetch('/v1/api/getStaffAttendanceStatus')
                .then(response => response.json())
                .then(data => {
                    if (data.attendanceMarked) {
                        document.getElementById('staffAttendanceBtn').innerText = "Marked";
                        document.getElementById('staffAttendanceBtn').disabled = true;
                    }
                });
                
            document.getElementById('attachment').addEventListener('change', function(e) {
                const fileName = e.target.files[0] ? e.target.files[0].name : '';
                document.getElementById('fileName').textContent = fileName;
            });
            
            document.getElementById('startDate').addEventListener('change', function() {
                document.getElementById('endDate').min = this.value;
            });
            
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('startDate').min = today;
            
            document.getElementById('closeLogoutModal').addEventListener('click', closeLogoutModal);
            document.getElementById('cancelLogout').addEventListener('click', closeLogoutModal);
        };

        function toggleVisibility(elementId) {
            const element = document.getElementById(elementId);
            const button = element.nextElementSibling;
            
            if (element.classList.contains('masked-value')) {
                element.textContent = sensitiveData[elementId];
                element.classList.remove('masked-value');
                button.textContent = 'Hide';
            } else {
                element.textContent = '••••••••••';
                element.classList.add('masked-value');
                button.textContent = 'Show';
            }
        }

        function openLeavePopup() {
            const popup = document.getElementById('leavePopup');
            popup.classList.add('active');
        }

        document.getElementById('closeLeavePopup').addEventListener('click', function() {
            closeLeavePopup();
        });

        document.getElementById('leavePopup').addEventListener('click', function(e) {
            if (e.target === this) {
                closeLeavePopup();
            }
        });

        function closeLeavePopup() {
            document.getElementById('leavePopup').classList.remove('active');
        }

        function submitLeaveApplication(event) {
            event.preventDefault();
            
            const leaveType = document.getElementById('leaveType').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const reason = document.getElementById('reason').value;
            const attachment = document.getElementById('attachment').files[0];
            
            const formData = new FormData();
            formData.append('leaveType', leaveType);
            formData.append('startDate', startDate);
            formData.append('endDate', endDate);
            formData.append('reason', reason);
            if (attachment) {
                formData.append('attachment', attachment);
            }
            
            showAttendancePopup("Processing your request...", true);
            
            document.getElementById('leavePopup').classList.remove('active');
            
            fetch('/v1/api/applyLeave', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('leaveForm').reset();
                    document.getElementById('fileName').textContent = '';
                    
                    showAttendancePopup(data.message, true);
                    
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    showAttendancePopup(data.message, false);
                }
            })
            .catch(error => {
                console.error('Error submitting leave application:', error);
                showAttendancePopup("An error occurred. Please try again.", false);
            });
        }

        function submitStaffAttendance() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(attendanceSuccess, attendanceError, {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                });
            } else {
                showAttendancePopup("Geolocation is not supported by your browser.", false);
            }
        }

        function attendanceSuccess(position) {
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;

            fetch('/v1/api/staffSelfAttendance', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ latitude, longitude })
            })
            .then(response => response.json())
            .then(data => {
                showAttendancePopup(data.message, data.success);

                if (data.success) {
                    document.getElementById('staffAttendanceBtn').innerText = "Marked";
                    document.getElementById('staffAttendanceBtn').disabled = true;
                }
            });
        }

        function attendanceError() {
            showAttendancePopup("Unable to retrieve location.", false);
        }

        function showAttendancePopup(message, success) {
            const popup = document.getElementById('attendancePopup');
            const popupText = document.getElementById('attendancePopupText');
            
            popupText.innerText = message;
            popup.style.backgroundColor = success ? "#10b981" : "#ef4444";
            popup.style.display = "block";

            setTimeout(() => {
                popup.style.display = "none";
            }, 5000);
        }
        
        function openLeaveHistoryPopup() {
            const popup = document.getElementById('leaveHistoryPopup');
            popup.classList.add('active');
            
            document.getElementById('leaveHistoryLoading').style.display = 'flex';
            document.getElementById('leaveHistoryTable').style.display = 'none';
            document.getElementById('leaveHistoryEmpty').style.display = 'none';
            
            fetchLeaveHistory();
        }
        
        document.getElementById('closeHistoryPopup').addEventListener('click', function() {
            document.getElementById('leaveHistoryPopup').classList.remove('active');
        });
        
        document.getElementById('leaveHistoryPopup').addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });
        
        function fetchLeaveHistory() {
            fetch('/v1/api/staff/leaveHistory')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('leaveHistoryLoading').style.display = 'none';
                    
                    if (data.success && data.data && data.data.length > 0) {
                        leaveHistoryData = data.data;
                        filteredLeaveHistory = [...leaveHistoryData];
                        
                        populateLeaveHistoryTable(filteredLeaveHistory);
                        
                        document.getElementById('leaveHistoryTable').style.display = 'block';
                    } else {
                        document.getElementById('leaveHistoryEmpty').style.display = 'flex';
                    }
                })
                .catch(error => {
                    console.error('Error fetching leave history:', error);
                    document.getElementById('leaveHistoryLoading').style.display = 'none';
                    document.getElementById('leaveHistoryEmpty').style.display = 'flex';
                    document.getElementById('leaveHistoryEmpty').querySelector('.empty-state-text').textContent = 
                        'An error occurred while fetching leave history. Please try again later.';
                });
        }
        
        function populateLeaveHistoryTable(data) {
            const tableBody = document.getElementById('leaveHistoryTableBody');
            tableBody.innerHTML = '';
            
            if (data.length === 0) {
                document.getElementById('leaveHistoryTable').style.display = 'none';
                document.getElementById('leaveHistoryEmpty').style.display = 'flex';
                return;
            }
            
            document.getElementById('leaveHistoryTable').style.display = 'block';
            document.getElementById('leaveHistoryEmpty').style.display = 'none';
            
            data.forEach(leave => {
                const row = document.createElement('tr');
                
                const startDate = new Date(leave.startDate);
                const endDate = new Date(leave.endDate);
                const days = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                
                const formattedStartDate = formatDate(startDate);
                const formattedEndDate = formatDate(endDate);
                const formattedAppliedDate = formatDate(new Date(leave.appliedOn));
                
                let statusClass = '';
                if (leave.status === 'Approved') {
                    statusClass = 'badge-approved';
                } else if (leave.status === 'Rejected') {
                    statusClass = 'badge-rejected';
                } else {
                    statusClass = 'badge-pending';
                }
                
                row.innerHTML = `
                    <td>${leave.type}</td>
                    <td>${formattedStartDate}</td>
                    <td>${formattedEndDate}</td>
                    <td>${days}</td>
                    <td>${leave.reason}</td>
                    <td>${formattedAppliedDate}</td>
                    <td><span class="badge ${statusClass}">${leave.status}</span></td>
                    <td>${leave.adminComment || '-'}</td>
                    <td>
                        ${leave.attachment ? `
                        <a href="${leave.attachment}" class="attachment-link" target="_blank">
                            <i class="fas fa-paperclip"></i> View
                        </a>
                        ` : '-'}
                    </td>
                `;
                
                tableBody.appendChild(row);
            });
        }
        
        function filterLeaveHistory() {
            const leaveType = document.getElementById('leaveTypeFilter').value;
            const status = document.getElementById('statusFilter').value;
            const year = document.getElementById('yearFilter').value;
            
            filteredLeaveHistory = leaveHistoryData.filter(leave => {
                const leaveDate = new Date(leave.startDate);
                const leaveYear = leaveDate.getFullYear().toString();
                
                const matchesType = leaveType === '' || leave.type === leaveType;
                const matchesStatus = status === '' || leave.status === status;
                const matchesYear = year === '' || leaveYear === year;
                
                return matchesType && matchesStatus && matchesYear;
            });
            
            populateLeaveHistoryTable(filteredLeaveHistory);
        }
        
        function formatDate(date) {
            if (!date || isNaN(date.getTime())) return '-';
            
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            
            return `${day}/${month}/${year}`;
        }
    </script>
</body>
</html>