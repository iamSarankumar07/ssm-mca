<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Uploadt</title>
    <link rel="icon" href="https://i.postimg.cc/VvbTw5Wt/add-friend.png">
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");
        * {
            font-family: "Poppins", sans-serif;
        }
        body {
            background-color: #f5f5f5;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        h1 {
            text-align: center;
            color: #3d6ef5ff;
            margin-top: 0;
        }

        img {
            display: block;
            width: 50%;
            height: auto;
            margin: 0 auto;
            border-radius: 5px;
            margin-bottom: 15px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        .btn {
            padding: 8px 0;
            color: #fff;
            width: 100%;
            border: 2px solid #3d6ef5ff;
            background: #3d6ef5ff;
            font-weight: bold;
            font-size: 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.4s;
            text-align: center;
        }

        .btn:hover {
            background: #f2f2f2;
            color: #3d6ef5ff;
        }

        .file-label {
            padding: 8px 0;
            color: #fff;
            display: block;
            text-align: center;
            width: 100%;
            border: 2px solid #3d6ef5ff;
            background: #3d6ef5ff;
            font-weight: bold;
            font-size: 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.4s;
        }

        .file-label:hover {
            background: #f2f2f2;
            color: #3d6ef5ff;
        }

        .file-input {
            display: none;
        }

        .file-name {
            margin-top: 8px;
            font-size: 14px;
            color: #555;
        }

        p {
            text-align: center;
            margin: 15px 0 0;
            font-size: 15px;
        }

        a {
            text-decoration: none;
            font-weight: bold;
            color: #472ddb;
            font-size: 15px;
        }

        a:hover {
            color: #1459da;
        }
    </style>
</head>
<body>

    <form action="/ssm/mca/uploadImageFireBase" method="post" enctype="multipart/form-data">
        <h1>Image Upload</h1>

        <img id="previewImage" src="{{imageUrl}}">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" placeholder="Enter title" autocomplete="off" required>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" placeholder="Enter description" required>

        <label for="image" class="file-label">Choose Image</label>
        <input class="file-input" id="image" type="file" name="image" accept="image/*" required>
        <div class="file-name" id="file-name"></div>

        <button type="submit" id="submitButton" class="btn">Upload</button>

        <p><a href="/ssm/mca/dashboard#gallery">&lt; Back</a></p>
    </form>

    <script>
        const fileInput = document.getElementById('image');
        const fileNameDisplay = document.getElementById('file-name');
        const previewImage = document.getElementById('previewImage');

        fileInput.addEventListener('change', function () {
            if (this.files && this.files.length > 0) {
                const file = this.files[0];
                fileNameDisplay.textContent = file.name;

                const reader = new FileReader();
                reader.onload = function (e) {
                    previewImage.src = e.target.result;
                };
                reader.readAsDataURL(file);
            } else {
                fileNameDisplay.textContent = '';
                previewImage.src = "{{imageUrl}}";
            }
        });
    </script>

</body>
</html>

