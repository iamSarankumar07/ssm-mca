<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Study Material</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --dark: #2b3452;
            --gray-light: #f8f9fa;
            --gray: #e9ecef;
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --transition: all 0.25s ease;
            --success: #10b981;
            --error: #ef4444;
        }
        
        body {
            background-color: #f5f7ff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
            color: var(--dark);
            padding: 1rem;
            position: relative;
        }
        
        .upload-container {
            width: 100%;
            max-width: 400px;
            padding: 1.75rem;
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow);
            border: 2px solid rgba(0, 0, 0, 0.05);
        }

        .form-header {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            color: #6b7280;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
            padding: 0.5rem 0.75rem;
            border-radius: 8px;
            background-color: var(--gray-light);
            transition: var(--transition);
            margin-bottom: 1rem;
        }

        .back-button:hover {
            color: var(--primary);
            transform: translateX(-3px);
            background-color: var(--primary-light);
        }

        .form-header h2 {
            font-weight: 700;
            color: var(--dark);
            font-size: 1.4rem;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: #6b7280;
            font-size: 0.875rem;
            margin-bottom: 0;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--dark);
            font-size: 0.875rem;
            display: flex;
            align-items: center;
        }

        .form-label i {
            margin-right: 0.5rem;
            color: var(--primary);
            font-size: 0.9rem;
        }

        .form-control, .form-select {
            padding: 0.625rem 1rem;
            border-radius: 10px;
            border: 1.5px solid #e5e7eb;
            transition: var(--transition);
            background-color: #fff;
            font-size: 0.9rem;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.02);
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        }

        .file-upload {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1.5rem 1rem;
            border: 2px dashed #e5e7eb;
            border-radius: 12px;
            background-color: #fafafa;
            cursor: pointer;
            margin-bottom: 1.5rem;
            text-align: center;
            transition: var(--transition);
            overflow: hidden;
            height: 140px; 
        }

        .file-upload:hover {
            border-color: var(--primary);
            background-color: var(--primary-light);
        }

        .file-upload i {
            font-size: 2rem;
            color: var(--primary);
            margin-bottom: 0.75rem;
        }

        .file-upload input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .file-upload-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            transition: var(--transition);
        }

        .file-name {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--primary);
            background-color: var(--primary-light);
            padding: 0.375rem 0.75rem;
            border-radius: 6px;
            max-width: 90%;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin-top: 0.5rem;
        }

        .file-upload.has-file .file-upload-default {
            display: none;
        }

        .file-upload-selected {
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .file-upload.has-file .file-upload-selected {
            display: flex;
        }

        .btn-upload {
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 10px;
            transition: var(--transition);
            background-color: var(--primary);
            border: none;
            font-size: 0.9rem;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-upload:hover {
            background-color: #3051d3;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(67, 97, 238, 0.3);
        }

        .btn-upload:disabled {
            opacity: 0.7;
            transform: none;
            cursor: not-allowed;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .spinner {
            width: 1.25rem;
            height: 1.25rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 0.8s linear infinite;
            display: none;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .toast-container {
            position: fixed;
            top: 1.5rem;
            right: 1.5rem;
            z-index: 9999;
        }

        .toast {
            padding: 1rem 1.5rem;
            border-radius: 10px;
            margin-bottom: 0.75rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 0.75rem;
            transform: translateX(150%);
            transition: transform 0.3s ease;
            max-width: 350px;
        }

        .toast.show {
            transform: translateX(0);
        }

        .toast-success {
            background-color: var(--success);
            color: white;
        }

        .toast-error {
            background-color: var(--error);
            color: white;
        }

        .toast-icon {
            font-size: 1.25rem;
        }

        .toast-message {
            flex: 1;
            font-weight: 500;
        }

        .toast-close {
            background: none;
            border: none;
            color: white;
            opacity: 0.7;
            cursor: pointer;
            font-size: 1.25rem;
            padding: 0;
            line-height: 1;
        }

        .toast-close:hover {
            opacity: 1;
        }

        .back-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #f0f0f0;
            text-decoration: none;
            color: #333;
            font-size: 1.2rem;
            transition: all 0.3s ease-in-out;
        }

        .back-icon:hover {
            background-color: #4361ee;
            color: white;
            box-shadow: 0 4px 8px rgba(67, 97, 238, 0.3);
        }

        .change-file-btn {
            font-size: 0.75rem;
            color: #6b7280;
            background: none;
            border: none;
            padding: 0;
            margin-top: 0.25rem;
            cursor: pointer;
            text-decoration: underline;
            transition: var(--transition);
        }

        .change-file-btn:hover {
            color: var(--primary);
        }

        @media (max-width: 576px) {
            .upload-container {
                padding: 1.5rem;
            }
            
            .toast-container {
                right: 1rem;
                left: 1rem;
            }
            
            .toast {
                max-width: 100%;
            }
        }
    </style>
</head>
<body>

<div class="upload-container">
    <div class="form-header d-flex align-items-center justify-content-between">
        <a href="javascript:history.back()" class="back-icon">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div class="text-end">
            <h2>{{course}} - {{year}} Upload Material</h2>
            <p>Add new study resources to the platform</p>
        </div>
    </div>

    <form id="uploadForm">
        <div class="form-group">
            <label for="subjectCode" class="form-label">
                <i class="bi bi-hash"></i>Subject Code
            </label>
            <input type="text" class="form-control" id="subjectCode" name="subjectCode" placeholder="Enter subject code" required>
        </div>

        <input type="hidden" id="course" name="course" value="{{course}}">
        <input type="hidden" id="year" name="year" value="{{year}}">

        <div class="form-group">
            <label for="subjectTitle" class="form-label">
                <i class="bi bi-book"></i>Subject Title
            </label>
            <input type="text" class="form-control" id="subjectTitle" name="subjectTitle" placeholder="Enter subject title" required>
        </div>

        <div class="form-group">
            <label for="semester" class="form-label">
                <i class="bi bi-book"></i>Semester
            </label>
            <input type="text" class="form-control" id="semester" name="semester" placeholder="Enter semester (1-4)" required maxlength="1" oninput="this.value = this.value.replace(/[^1-4]/g, '')">
        </div>

        <div class="file-upload" id="fileUploadArea">
            <div class="file-upload-default">
                <i class="bi bi-file-earmark-pdf"></i>
                <p class="mb-1 fw-medium" style="font-size: 0.9rem;">Drag & drop your PDF here</p>
                <p class="text-muted small mb-0" style="font-size: 0.75rem;">or click to browse files</p>
            </div>
            <div class="file-upload-selected">
                <i class="bi bi-file-earmark-pdf"></i>
                <p class="file-name" id="fileName">No file selected</p>
                <button type="button" class="change-file-btn" id="changeFileBtn">Change file</button>
            </div>
            <input type="file" name="pdf" id="pdfFile" accept="application/pdf" required>
        </div>

        <button type="submit" class="btn btn-primary btn-upload" id="uploadButton">
            <div class="spinner" id="uploadSpinner"></div>
            <span id="uploadButtonText"><i class="bi bi-cloud-arrow-up"></i> Upload Material</span>
        </button>
    </form>
</div>

<div class="toast-container" id="toastContainer"></div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('pdfFile').addEventListener('change', function(e) {
        const fileName = e.target.files[0] ? e.target.files[0].name : '';
        const fileNameElement = document.getElementById('fileName');
        const fileUploadArea = document.getElementById('fileUploadArea');

        if (fileName) {
            fileNameElement.textContent = fileName;
            fileUploadArea.classList.add('has-file');
            fileUploadArea.style.borderColor = '#4361ee';
            fileUploadArea.style.backgroundColor = 'var(--primary-light)';
        } else {
            fileUploadArea.classList.remove('has-file');
            fileUploadArea.style.borderColor = '#e5e7eb';
            fileUploadArea.style.backgroundColor = '#fafafa';
        }
    });

    document.getElementById('changeFileBtn').addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        document.getElementById('pdfFile').value = '';
        document.getElementById('pdfFile').click();
    });

    function showToast(message, type = 'success') {
        const toastContainer = document.getElementById('toastContainer');
        
        const toast = document.createElement('div');
        toast.className = `toast toast-${type}`;
        
        const icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-circle-fill';
        toast.innerHTML = `
            <div class="toast-icon"><i class="bi ${icon}"></i></div>
            <div class="toast-message">${message}</div>
            <button class="toast-close"><i class="bi bi-x"></i></button>
        `;
        
        toastContainer.appendChild(toast);
        
        setTimeout(() => {
            toast.classList.add('show');
        }, 10);
        
        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => {
                toastContainer.removeChild(toast);
            }, 300);
        }, 5000);
        
        toast.querySelector('.toast-close').addEventListener('click', () => {
            toast.classList.remove('show');
            setTimeout(() => {
                toastContainer.removeChild(toast);
            }, 300);
        });
    }

    document.getElementById('uploadForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const form = this;
        const formData = new FormData(form);
        const uploadButton = document.getElementById('uploadButton');
        const uploadSpinner = document.getElementById('uploadSpinner');
        const uploadButtonText = document.getElementById('uploadButtonText');
        
        const subjectCode = formData.get('subjectCode');
        const subjectTitle = formData.get('subjectTitle');
        const semester = formData.get('semester');
        const course = formData.get('course');
        const year = formData.get('year');
        const pdfFile = formData.get('pdf');
        
        if (!subjectCode || !subjectTitle || !pdfFile.name) {
            showToast('Please fill all required fields', 'error');
            return;
        }
        
        uploadButton.disabled = true;
        uploadSpinner.style.display = 'block';
        uploadButtonText.innerHTML = 'Uploading...';
        
        try {
            const response = await fetch('/v1/api/uploadStudyMaterial', {
                method: 'POST',
                body: formData,
            });
            
            if (!response.ok) {
                throw new Error(`Error: ${response.status}`);
            }
            
            const result = await response.json();
            
            showToast('Study material uploaded successfully!', 'success');
            
            form.reset();
            const fileUploadArea = document.getElementById('fileUploadArea');
            fileUploadArea.classList.remove('has-file');
            fileUploadArea.style.borderColor = '#e5e7eb';
            fileUploadArea.style.backgroundColor = '#fafafa';
            
        } catch (error) {
            console.error('Upload error:', error);
            showToast('Failed to upload. Please try again.', 'error');
        } finally {
            uploadButton.disabled = false;
            uploadSpinner.style.display = 'none';
            uploadButtonText.innerHTML = '<i class="bi bi-cloud-arrow-up"></i> Upload Material';
        }
    });
</script>

</body>
</html>