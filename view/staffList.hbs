    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    
    <script>
        let staffData = [];
        
        const staffTableBody = document.getElementById('staffTableBody');
        const emptyState = document.getElementById('emptyState');
        const searchInput = document.getElementById('searchInput');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const tableBody = document.querySelector('.table-body');
        
        const viewStaffModal = new bootstrap.Modal(document.getElementById('viewStaffModal'));
        const deleteStaffModal = new bootstrap.Modal(document.getElementById('deleteStaffModal'));
        
        document.addEventListener('DOMContentLoaded', function() {
            showSkeletonLoading();
            loadStaffData();
            setupEventListeners();
        });
        
        function goBack() {
            window.location.href = '/v1/api/dashboard';
        }
        
        function redirectToRegistration() {
            window.location.href = '/v1/api/staffRegistration';
        }
        
        function setupEventListeners() {
            searchInput.addEventListener('input', function() {
                renderStaffTable(filterStaffData(this.value));
            });
            
            document.getElementById('confirmDeleteBtn').addEventListener('click', deleteStaff);
        }
        
        function showSpinner() {
            loadingSpinner.classList.add('show');
        }
        
        function hideSpinner() {
            loadingSpinner.classList.remove('show');
        }
        
        function showSkeletonLoading() {
            staffTableBody.innerHTML = '';
            
            for (let i = 0; i < 5; i++) {
                const skeletonRow = document.createElement('tr');
                skeletonRow.innerHTML = `
                    <td>
                        <div class="staff-info">
                            <div class="skeleton skeleton-avatar"></div>
                            <div class="skeleton-text">
                                <div class="skeleton skeleton-name"></div>
                                <div class="skeleton skeleton-email"></div>
                            </div>
                        </div>
                    </td>
                    <td><div class="skeleton skeleton-cell"></div></td>
                    <td><div class="skeleton skeleton-cell"></div></td>
                    <td><div class="skeleton skeleton-cell"></div></td>
                    <td><div class="skeleton skeleton-cell"></div></td>
                    <td><div class="skeleton skeleton-badge"></div></td>
                    <td>
                        <div class="skeleton-actions">
                            <div class="skeleton skeleton-button"></div>
                            <div class="skeleton skeleton-button"></div>
                            <div class="skeleton skeleton-button"></div>
                        </div>
                    </td>
                `;
                staffTableBody.appendChild(skeletonRow);
            }
        }
        
        function showToast(message, type = 'info') {
            const backgroundColor = type === 'success' ? '#10b981' : 
                                   type === 'error' ? '#ef4444' : 
                                   type === 'warning' ? '#f59e0b' : '#7c3aed';
            
            Toastify({
                text: message,
                duration: 3000,
                gravity: "top",
                position: "right",
                backgroundColor: backgroundColor,
                stopOnFocus: true,
                className: "rounded-lg",
                style: {
                    borderRadius: "12px",
                    padding: "14px 18px",
                    fontSize: "14px",
                    fontWeight: "600",
                    boxShadow: "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
                }
            }).showToast();
        }
        
        async function loadStaffData() {
            try {
                showSkeletonLoading();
                
                const response = await fetch('/v1/api/getStaffData');
                
                if (!response.ok) {
                    throw new Error('Failed to fetch staff data');
                }
                
                const data = await response.json();
                staffData = data;
                
                setTimeout(() => {
                    renderStaffTable(staffData);
                    showToast('Staff data loaded successfully', 'success');
                }, 800);
            } catch (error) {
                console.error('Error loading staff data:', error);
                showToast('Failed to load staff data: ' + error.message, 'error');
                
                emptyState.style.display = 'block';
                staffTableBody.innerHTML = '';
            }
        }
        
        function filterStaffData(searchTerm) {
            if (!searchTerm) {
                return staffData;
            }
            
            searchTerm = searchTerm.toLowerCase();
            
            return staffData.filter(staff => 
                (staff.firstName + ' ' + staff.lastName).toLowerCase().includes(searchTerm) ||
                staff.email.toLowerCase().includes(searchTerm) ||
                staff.department.toLowerCase().includes(searchTerm) ||
                staff.designation.toLowerCase().includes(searchTerm) ||
                staff.staffId.toLowerCase().includes(searchTerm)
            );
        }
        
        function renderStaffTable(data) {
            staffTableBody.innerHTML = '';
            
            if (data.length === 0) {
                emptyState.style.display = 'block';
                tableBody.style.display = 'none';
                return;
            }
            
            emptyState.style.display = 'none';
            tableBody.style.display = 'block';
            
            data.forEach(staff => {
                const row = document.createElement('tr');
                
                const staffInfoCell = document.createElement('td');
                staffInfoCell.style.width = '25%';
                staffInfoCell.innerHTML = `
                    <div class="staff-info">
                        <div class="avatar">
                            ${staff.imageUrl ? `<img src="${staff.imageUrl}" alt="${staff.firstName}">` : getInitials(staff.firstName + ' ' + staff.lastName)}
                        </div>
                        <div>
                            <h5 class="staff-name">${staff.firstName} ${staff.lastName}</h5>
                            <p class="staff-email">${staff.email}</p>
                        </div>
                    </div>
                `;
                
                const staffIdCell = document.createElement('td');
                staffIdCell.style.width = '10%';
                staffIdCell.textContent = staff.staffId;
                
                const departmentCell = document.createElement('td');
                departmentCell.style.width = '15%';
                departmentCell.textContent = staff.department;
                
                const designationCell = document.createElement('td');
                designationCell.style.width = '15%';
                designationCell.textContent = staff.designation;
                
                const contactCell = document.createElement('td');
                contactCell.style.width = '10%';
                contactCell.textContent = staff.phone;
                
                const statusCell = document.createElement('td');
                statusCell.style.width = '10%';
                const statusBadge = document.createElement('span');
                statusBadge.className = `status-badge ${staff.isActive ? 'status-active' : 'status-inactive'}`;
                statusBadge.textContent = staff.isActive ? 'Active' : 'Inactive';
                statusCell.appendChild(statusBadge);
                
                const actionsCell = document.createElement('td');
                actionsCell.style.width = '15%';
                actionsCell.innerHTML = `
                    <div class="action-buttons">
                        <button class="btn btn-sm btn-outline-primary view-btn" data-id="${staff._id}" title="View Details">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-primary edit-btn" data-id="${staff._id}" title="Edit Staff">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger delete-btn" data-id="${staff._id}" title="Delete Staff">
                            <i class="fas fa-trash"></i>
                        </button>
                        <label class="switch ms-2" title="${staff.isActive ? 'Deactivate' : 'Activate'} Staff">
                            <input type="checkbox" class="status-toggle" data-id="${staff._id}" ${staff.isActive ? 'checked' : ''}>
                            <span class="slider"></span>
                        </label>
                    </div>
                `;
                
                row.appendChild(staffInfoCell);
                row.appendChild(staffIdCell);
                row.appendChild(departmentCell);
                row.appendChild(designationCell);
                row.appendChild(contactCell);
                row.appendChild(statusCell);
                row.appendChild(actionsCell);
                
                staffTableBody.appendChild(row);
            });
            
            addActionButtonListeners();
        }
        
        function addActionButtonListeners() {
            document.querySelectorAll('.view-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const staffId = this.getAttribute('data-id');
                    viewStaffDetails(staffId);
                });
            });
            
            document.querySelectorAll('.edit-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const staffId = this.getAttribute('data-id');
                    redirectToEditPage(staffId);
                });
            });
            
            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const staffId = this.getAttribute('data-id');
                    openDeleteConfirmation(staffId);
                });
            });
            
            document.querySelectorAll('.status-toggle').forEach(toggle => {
                toggle.addEventListener('change', function() {
                    const staffId = this.getAttribute('data-id');
                    const newStatus = this.checked;
                    updateStaffStatus(staffId, newStatus);
                });
            });
        }
        
        function getInitials(name) {
            return name
                .split(' ')
                .map(part => part.charAt(0))
                .join('')
                .toUpperCase();
        }
        
        function formatDate(dateString) {
            if (!dateString) return 'N/A';
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            return new Date(dateString).toLocaleDateString(undefined, options);
        }
        
        function viewStaffDetails(staffId) {
            const staff = staffData.find(s => s._id === staffId);
            
            if (!staff) {
                showToast('Staff member not found', 'error');
                return;
            }
            
            document.getElementById('viewStaffName').textContent = staff.firstName + ' ' + staff.lastName;
            document.getElementById('viewStaffDesignation').textContent = staff.designation;
            document.getElementById('viewStaffDepartment').textContent = staff.department;
            
            const statusBadge = document.getElementById('viewStaffStatusBadge');
            statusBadge.textContent = staff.isActive ? 'Active' : 'Inactive';
            statusBadge.className = `profile-badge ${staff.isActive ? 'status-active' : 'status-inactive'}`;
            
            document.getElementById('viewStaffId').textContent = staff.staffId;
            document.getElementById('viewStaffDob').textContent = formatDate(staff.dob);
            document.getElementById('viewStaffGender').textContent = staff.gender;
            document.getElementById('viewStaffNationality').textContent = staff.nationality || 'N/A';
            document.getElementById('viewStaffAadhaar').textContent = staff.aadhaarNum || 'N/A';
            
            document.getElementById('viewStaffEmail').textContent = staff.email;
            document.getElementById('viewStaffPhone').textContent = staff.phone;
            document.getElementById('viewStaffEmergencyContact').textContent = staff.emergencyContact || 'N/A';
            document.getElementById('viewStaffEmergencyPhone').textContent = staff.emergencyPhone || 'N/A';
            document.getElementById('viewStaffAddress').textContent = staff.address || 'N/A';
            document.getElementById('viewStaffCity').textContent = staff.city || 'N/A';
            document.getElementById('viewStaffState').textContent = staff.state || 'N/A';
            document.getElementById('viewStaffPinCode').textContent = staff.pinCode || 'N/A';
            
            document.getElementById('viewStaffJoiningDate').textContent = formatDate(staff.joiningDate);
            document.getElementById('viewStaffExperience').textContent = staff.experience ? `${staff.experience} years` : 'N/A';
            document.getElementById('viewStaffSpecialization').textContent = staff.specialization || 'N/A';
            document.getElementById('viewStaffSalary').textContent = staff.salary ? `${staff.salary}` : 'N/A';
            
            document.getElementById('viewStaffQualification').textContent = staff.highestQualification || 'N/A';
            document.getElementById('viewStaffUniversity').textContent = staff.university || 'N/A';
            document.getElementById('viewStaffYearOfPassing').textContent = staff.yearOfPassing || 'N/A';
            
            if (staff.bankDetails) {
                document.getElementById('viewStaffAccountName').textContent = staff.bankDetails.accountHolderName || 'N/A';
                document.getElementById('viewStaffBankName').textContent = staff.bankDetails.bankName || 'N/A';
                document.getElementById('viewStaffAccountNumber').textContent = staff.bankDetails.accountNumber || 'N/A';
                document.getElementById('viewStaffIfscCode').textContent = staff.bankDetails.ifscCode || 'N/A';
                document.getElementById('viewStaffUpiId').textContent = staff.bankDetails.upiId || 'N/A';
            } else {
                document.getElementById('viewStaffAccountName').textContent = 'N/A';
                document.getElementById('viewStaffBankName').textContent = 'N/A';
                document.getElementById('viewStaffAccountNumber').textContent = 'N/A';
                document.getElementById('viewStaffIfscCode').textContent = 'N/A';
                document.getElementById('viewStaffUpiId').textContent = 'N/A';
            }
            
            document.getElementById('viewStaffRole').textContent = staff.role || 'N/A';
            document.getElementById('viewStaffIsAdmin').textContent = staff.isAdmin ? 'Yes' : 'No';
            document.getElementById('viewStaffIsSuperAdmin').textContent = staff.isSuperAdmin ? 'Yes' : 'No';
            document.getElementById('viewStaffIsFaculty').textContent = staff.isFaculty ? 'Yes' : 'No';
            
            const staffImage = document.getElementById('viewStaffImage');
            if (staff.imageUrl) {
                staffImage.src = staff.imageUrl;
                staffImage.alt = staff.firstName + ' ' + staff.lastName;
            } else {
                staffImage.src = '/placeholder.svg?height=140&width=140';
                staffImage.alt = 'No Image';
            }
            
            viewStaffModal.show();
        }
        
        function redirectToEditPage(staffId) {
            window.location.href = `/v1/api/staffEdit/${staffId}`;
        }
        
        function openDeleteConfirmation(staffId) {
            const staff = staffData.find(s => s._id === staffId);
            
            if (!staff) {
                showToast('Staff member not found', 'error');
                return;
            }
            
            document.getElementById('deleteStaffId').value = staffId;
            document.getElementById('deleteStaffName').textContent = staff.firstName + ' ' + staff.lastName;
            
            deleteStaffModal.show();
        }
        
        async function deleteStaff() {
            const staffId = document.getElementById('deleteStaffId').value;
            
            try {
                showSkeletonLoading();
                
                const response = await fetch(`/v1/api/staff/${staffId}`, {
                    method: 'DELETE'
                });
                
                if (!response.ok) {
                    throw new Error('Failed to delete staff member');
                }
                
                staffData = staffData.filter(s => s._id !== staffId);
                
                renderStaffTable(filterStaffData(searchInput.value));
                
                deleteStaffModal.hide();
                
                showToast('Staff member deleted successfully', 'success');
            } catch (error) {
                console.error('Error deleting staff:', error);
                showToast('Failed to delete staff: ' + error.message, 'error');
            }
        }
        
        async function updateStaffStatus(staffId, newStatus) {
            try {
                showSkeletonLoading();

                let userId = `${staffId}`;
                
                const response = await fetch(`/v1/api/staff/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ isActive: newStatus, userId: userId })
                });
                
                if (!response.ok) {
                    throw new Error('Failed to update staff status');
                }
                
                const index = staffData.findIndex(s => s._id === staffId);
                if (index !== -1) {
                    staffData[index].isActive = newStatus;
                }
                
                renderStaffTable(filterStaffData(searchInput.value));
                
                showToast(`Staff status ${newStatus ? 'activated' : 'deactivated'} successfully`, 'success');
            } catch (error) {
                console.error('Error updating staff status:', error);
                showToast('Failed to update staff status: ' + error.message, 'error');
            }
        }
